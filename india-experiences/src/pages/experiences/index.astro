---
import BaseLayout from '../../layouts/BaseLayout.astro';
import experiencesData from '../../data/experiences.json';

// Build experiences from JSON file
const experiences = experiencesData.map(exp => ({
  name: exp.name,
  category: exp.category,
  description: exp.description,
  image: exp.listImage || exp.cardImage,
  href: exp.href
}));
---

<BaseLayout
  title="Experiences"
  description="Discover unique experiences across India. From food tours to heritage walks, find activities that create lasting memories."
>
  <!-- Breadcrumb -->
  <nav class="breadcrumb">
    <a href="/">Home</a>
    <span class="separator">/</span>
    <span>Experiences</span>
  </nav>

  <!-- Hero -->
  <section class="page-hero">
    <img
      src="https://images.unsplash.com/photo-1477587458883-47145ed94245?w=1200&q=80"
      alt="Experiences"
      class="hero-bg"
    />
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <p class="hero-tagline">CREATE MEMORIES</p>
      <h1 class="hero-title">EXPERIENCES</h1>
    </div>
  </section>

  <!-- Items List -->
  <section class="items-section">
    <div class="items-list">
      {experiences.map(item => (
        <article class="item-card">
          <a href={item.href} class="item-image">
            <img src={item.image} alt={item.name} loading="lazy" />
          </a>
          <div class="item-content">
            <h2 class="item-title">
              <a href={item.href}>{item.name.toUpperCase()}</a>
            </h2>
            <div class="item-meta">
              <span class="meta-item">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"></path>
                </svg>
                {item.category}
              </span>
            </div>
            <p class="item-desc">{item.description}</p>
            <a href={item.href} class="read-more">EXPLORE</a>
          </div>
        </article>
      ))}
    </div>

    <!-- Share -->
    <div class="share-section">
      <p class="share-text">Why Not?<br/><strong>Share with your friends</strong></p>
      <div class="share-icons">
        <a href="#" aria-label="Facebook">
          <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z" />
          </svg>
        </a>
        <a href="#" aria-label="Twitter">
          <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
            <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Newsletter -->
  <section class="newsletter">
    <h2>STAY UP TO DATE BY SUBSCRIBING<br/>TO OUR NEWSLETTER</h2>
    <form class="newsletter-form">
      <input type="text" placeholder="FORENAME" required />
      <input type="text" placeholder="SURNAME" required />
      <input type="email" placeholder="EMAIL ADDRESS" required />
      <button type="submit">SUBSCRIBE</button>
    </form>
  </section>
</BaseLayout>

<style>
  /* Breadcrumb */
  .breadcrumb {
    padding: 16px 24px;
    font-family: 'Muli', sans-serif;
    font-size: 12px;
    letter-spacing: 0.1em;
    color: #6b7280;
    background-color: #ffffff;
  }

  .breadcrumb a {
    color: #6b7280;
    text-decoration: none;
  }

  .breadcrumb a:hover {
    color: #111827;
  }

  .breadcrumb .separator {
    margin: 0 8px;
  }

  /* Hero */
  .page-hero {
    position: relative;
    height: 280px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: rgba(80, 60, 0, 0.6);
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    color: #ffffff;
  }

  .hero-tagline {
    font-family: 'Muli', sans-serif;
    font-size: 11px;
    font-weight: 400;
    letter-spacing: 0.3em;
    margin: 0 0 12px 0;
    opacity: 0.9;
  }

  .hero-title {
    font-family: 'Oswald', sans-serif;
    font-size: 42px;
    font-weight: 400;
    letter-spacing: 0.15em;
    margin: 0;
  }

  /* Items */
  .items-section {
    padding: 40px 24px;
    background-color: #ffffff;
  }

  .items-list {
    max-width: 600px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 48px;
  }

  .item-card {
    display: block;
  }

  .item-image {
    display: block;
    width: 100%;
    aspect-ratio: 16/10;
    overflow: hidden;
    margin-bottom: 20px;
  }

  .item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .item-card:hover .item-image img {
    transform: scale(1.03);
  }

  .item-content {
    padding: 0;
  }

  .item-title {
    font-family: 'Oswald', sans-serif;
    font-size: 18px;
    font-weight: 400;
    letter-spacing: 0.05em;
    line-height: 1.4;
    margin: 0 0 12px 0;
  }

  .item-title a {
    color: #111827;
    text-decoration: none;
  }

  .item-title a:hover {
    color: #0d9488;
  }

  .item-meta {
    display: flex;
    gap: 20px;
    margin-bottom: 12px;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 6px;
    font-family: 'Muli', sans-serif;
    font-size: 12px;
    color: #6b7280;
  }

  .meta-item svg {
    opacity: 0.7;
  }

  .item-desc {
    font-family: 'Muli', sans-serif;
    font-size: 14px;
    color: #6b7280;
    line-height: 1.6;
    margin: 0 0 16px 0;
  }

  .read-more {
    font-family: 'Muli', sans-serif;
    font-size: 13px;
    font-weight: 600;
    letter-spacing: 0.05em;
    color: #0d9488;
    text-decoration: none;
  }

  .read-more:hover {
    text-decoration: underline;
  }

  /* Share */
  .share-section {
    max-width: 600px;
    margin: 48px auto;
    padding: 24px 0;
    border-top: 1px solid #e5e7eb;
    border-bottom: 1px solid #e5e7eb;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .share-text {
    font-family: 'Muli', sans-serif;
    font-size: 13px;
    color: #6b7280;
    margin: 0;
    line-height: 1.5;
  }

  .share-text strong {
    color: #111827;
  }

  .share-icons {
    display: flex;
    gap: 16px;
  }

  .share-icons a {
    color: #111827;
    transition: color 0.2s ease;
  }

  .share-icons a:hover {
    color: #0d9488;
  }

  /* Newsletter */
  .newsletter {
    padding: 64px 24px;
    background-color: #f9fafb;
    text-align: center;
  }

  .newsletter h2 {
    font-family: 'Oswald', sans-serif;
    font-size: 20px;
    font-weight: 400;
    letter-spacing: 0.1em;
    color: #111827;
    margin: 0 0 32px 0;
    line-height: 1.5;
  }

  .newsletter-form {
    max-width: 320px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .newsletter-form input {
    padding: 14px 16px;
    font-family: 'Muli', sans-serif;
    font-size: 12px;
    letter-spacing: 0.1em;
    border: 1px solid #e5e7eb;
    background-color: #ffffff;
    color: #111827;
  }

  .newsletter-form input::placeholder {
    color: #9ca3af;
  }

  .newsletter-form button {
    padding: 14px 16px;
    font-family: 'Muli', sans-serif;
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 0.1em;
    border: none;
    background-color: #0d9488;
    color: #ffffff;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }

  .newsletter-form button:hover {
    background-color: #0f766e;
  }
</style>

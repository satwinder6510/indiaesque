---
import BaseLayout from '../../layouts/BaseLayout.astro';
import experiencesData from '../../data/experiences.json';
import { searchProducts, INDIA_DESTINATION_ID } from '../../lib/viator';

export const prerender = true;

export async function getStaticPaths() {
  return experiencesData.map(exp => ({
    params: { slug: exp.slug },
    props: { experience: exp }
  }));
}

const { slug } = Astro.params;
const { experience } = Astro.props;

// Fetch Viator tours for this experience type
const tours = experience.viatorTagId
  ? await searchProducts({
      destId: INDIA_DESTINATION_ID,
      tagIds: [experience.viatorTagId],
      limit: 12
    })
  : [];

// Get other experience types for navigation
const otherExperiences = experiencesData.filter(e => e.slug !== slug);
---

<BaseLayout
  title={`${experience.name} in India`}
  description={experience.description}
  includeFooter={true}
>
  <section class="hero">
    <img src={experience.heroImage} alt={experience.name} class="hero-bg" />
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <nav class="breadcrumb">
        <a href="/">Home</a>
        <span>/</span>
        <a href="/experiences/">Experiences</a>
        <span>/</span>
        <span>{experience.name}</span>
      </nav>
      <h1>{experience.name.toUpperCase()} IN INDIA</h1>
      <p>{experience.description}</p>
    </div>
  </section>

  <section class="tours-section">
    {tours.length > 0 ? (
      <>
        <h2>Available {experience.name}</h2>
        <div class="tours-grid">
          {tours.map(tour => (
            <a href={tour.bookingLink} target="_blank" rel="noopener noreferrer" class="tour-card">
              <div class="tour-image">
                <img src={tour.imageUrl} alt={tour.title} loading="lazy" />
              </div>
              <div class="tour-content">
                <h3>{tour.title}</h3>
                <div class="tour-meta">
                  <span class="tour-duration">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="12" cy="12" r="10"></circle>
                      <polyline points="12 6 12 12 16 14"></polyline>
                    </svg>
                    {tour.duration}
                  </span>
                  {tour.rating > 0 && (
                    <span class="tour-rating">
                      <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                      </svg>
                      {tour.rating.toFixed(1)} ({tour.reviewCount})
                    </span>
                  )}
                </div>
                <div class="tour-price">
                  From <strong>â‚¹{Math.round(tour.price.amount).toLocaleString('en-IN')}</strong>
                </div>
                <span class="book-btn">View Details</span>
              </div>
            </a>
          ))}
        </div>
      </>
    ) : (
      <div class="no-tours">
        <h2>{experience.name} Coming Soon</h2>
        <p>We're curating the best {experience.name.toLowerCase()} experiences across India. Check back soon or explore other experience types below.</p>
      </div>
    )}
  </section>

  <section class="other-experiences">
    <h2>Explore Other Experiences</h2>
    <div class="other-grid">
      {otherExperiences.map(exp => (
        <a href={`/experiences/${exp.slug}/`} class="other-card">
          <img src={exp.cardImage} alt={exp.name} loading="lazy" />
          <div class="other-info">
            <span class="other-name">{exp.name.toUpperCase()}</span>
          </div>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    position: relative;
    height: 50vh;
    min-height: 350px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.3) 100%);
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    color: #ffffff;
    padding: 0 24px;
    max-width: 700px;
  }

  .breadcrumb {
    font-family: 'Muli', sans-serif;
    font-size: 12px;
    margin-bottom: 16px;
    opacity: 0.8;
  }

  .breadcrumb a {
    color: #ffffff;
    text-decoration: none;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  .breadcrumb span {
    margin: 0 8px;
  }

  .hero-content h1 {
    font-family: 'Oswald', sans-serif;
    font-size: 32px;
    font-weight: 400;
    letter-spacing: 0.1em;
    margin: 0 0 16px 0;
  }

  .hero-content p {
    font-family: 'Muli', sans-serif;
    font-size: 14px;
    line-height: 1.6;
    opacity: 0.9;
    margin: 0;
  }

  .tours-section {
    padding: 48px 24px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .tours-section h2 {
    font-family: 'Oswald', sans-serif;
    font-size: 24px;
    font-weight: 400;
    letter-spacing: 0.05em;
    color: #111827;
    margin: 0 0 32px 0;
  }

  .tours-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 24px;
  }

  .tour-card {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
    background: #ffffff;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    overflow: hidden;
    transition: box-shadow 0.2s ease, transform 0.2s ease;
  }

  .tour-card:hover {
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    transform: translateY(-2px);
  }

  .tour-image {
    width: 100%;
    aspect-ratio: 16/10;
    overflow: hidden;
  }

  .tour-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .tour-card:hover .tour-image img {
    transform: scale(1.05);
  }

  .tour-content {
    padding: 16px;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .tour-content h3 {
    font-family: 'Muli', sans-serif;
    font-size: 15px;
    font-weight: 600;
    color: #111827;
    margin: 0;
    line-height: 1.4;
  }

  .tour-meta {
    display: flex;
    align-items: center;
    gap: 16px;
    font-family: 'Muli', sans-serif;
    font-size: 13px;
    color: #6b7280;
  }

  .tour-duration,
  .tour-rating {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .tour-rating {
    color: #f59e0b;
  }

  .tour-price {
    font-family: 'Muli', sans-serif;
    font-size: 14px;
    color: #6b7280;
  }

  .tour-price strong {
    font-size: 18px;
    font-weight: 700;
    color: #0d9488;
  }

  .book-btn {
    display: inline-block;
    padding: 10px 20px;
    background: #0d9488;
    color: #ffffff;
    font-family: 'Muli', sans-serif;
    font-size: 13px;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-align: center;
    border-radius: 4px;
    transition: background 0.2s ease;
  }

  .tour-card:hover .book-btn {
    background: #0f766e;
  }

  .no-tours {
    text-align: center;
    padding: 48px 24px;
  }

  .no-tours h2 {
    margin-bottom: 16px;
  }

  .no-tours p {
    font-family: 'Muli', sans-serif;
    font-size: 15px;
    color: #6b7280;
    max-width: 500px;
    margin: 0 auto;
  }

  .other-experiences {
    padding: 48px 24px;
    background: #f9fafb;
  }

  .other-experiences h2 {
    font-family: 'Oswald', sans-serif;
    font-size: 20px;
    font-weight: 400;
    letter-spacing: 0.05em;
    color: #111827;
    margin: 0 0 24px 0;
  }

  .other-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .other-card {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    text-decoration: none;
  }

  .other-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .other-card:hover img {
    transform: scale(1.05);
  }

  .other-info {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 12px;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
  }

  .other-name {
    font-family: 'Muli', sans-serif;
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 0.1em;
    color: #ffffff;
  }

  @media (min-width: 768px) {
    .hero-content h1 {
      font-size: 42px;
    }

    .hero-content p {
      font-size: 16px;
    }

    .tours-section {
      padding: 64px 48px;
    }

    .tours-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .other-experiences {
      padding: 64px 48px;
    }

    .other-experiences h2 {
      text-align: center;
      font-size: 24px;
      margin-bottom: 32px;
    }

    .other-grid {
      grid-template-columns: repeat(5, 1fr);
      gap: 24px;
    }
  }

  @media (min-width: 1024px) {
    .tours-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>

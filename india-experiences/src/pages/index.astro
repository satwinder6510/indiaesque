---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get latest journal articles
const allPages = await getCollection('pages');
const latestJournals = allPages
  .filter(page => page.data.type === 'paa')
  .sort((a, b) => new Date(b.data.dateModified).getTime() - new Date(a.data.dateModified).getTime())
  .slice(0, 1);

const popularLocations = [
  { name: 'DELHI', image: 'https://images.unsplash.com/photo-1587474260584-136574528ed5?w=400&q=80', href: '/delhi/' },
  { name: 'JAIPUR', image: 'https://images.unsplash.com/photo-1599661046289-e31897846e41?w=400&q=80', href: '/jaipur/' },
  { name: 'MUMBAI', image: 'https://images.unsplash.com/photo-1570168007204-dfb528c6958f?w=400&q=80', href: '/mumbai/' },
  { name: 'GOA', image: 'https://images.unsplash.com/photo-1512343879784-a960bf40e7f2?w=400&q=80', href: '/goa/' },
  { name: 'AGRA', image: 'https://images.unsplash.com/photo-1564507592333-c60657eea523?w=400&q=80', href: '/agra/' },
  { name: 'VARANASI', image: 'https://images.unsplash.com/photo-1561361058-c24cecae35ca?w=400&q=80', href: '/varanasi/' },
  { name: 'KOLKATA', image: 'https://images.unsplash.com/photo-1558431382-27e303142255?w=400&q=80', href: '/kolkata/' },
  { name: 'UDAIPUR', image: 'https://images.unsplash.com/photo-1602216056096-3b40cc0c9944?w=400&q=80', href: '/udaipur/' },
];

const categories = [
  { name: 'FOODIE', image: 'https://images.unsplash.com/photo-1505253758473-96b7015fcd40?w=400&q=80' },
  { name: 'NATURE', image: 'https://images.unsplash.com/photo-1433086966358-54859d0ed716?w=400&q=80' },
  { name: 'CULTURAL', image: 'https://images.unsplash.com/photo-1524492412937-b28074a5d7da?w=400&q=80' },
  { name: 'ARTS AND CRAFTS', image: 'https://images.unsplash.com/photo-1513519245088-0e12902e5a38?w=400&q=80' },
  { name: 'WALKING TOURS', image: 'https://images.unsplash.com/photo-1477587458883-47145ed94245?w=400&q=80' },
  { name: 'ADVENTURE', image: 'https://images.unsplash.com/photo-1527631746610-bca00a040d60?w=400&q=80' },

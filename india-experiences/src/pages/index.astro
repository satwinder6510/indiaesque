<script>
  const scrollContainer = document.querySelector('.locations-scroll');
  const leftArrow = document.querySelector('.scroll-left');
  const rightArrow = document.querySelector('.scroll-right');
  const cards = document.querySelectorAll('.location-card');

  function updateArrows() {
    if (!scrollContainer || !leftArrow || !rightArrow) return;

    const scrollLeft = scrollContainer.scrollLeft;
    const maxScroll = scrollContainer.scrollWidth - scrollContainer.clientWidth;

    // Show/hide left arrow
    leftArrow.style.display = scrollLeft <= 0 ? 'none' : 'flex';

    // Show/hide right arrow
    rightArrow.style.display = scrollLeft >= maxScroll - 1 ? 'none' : 'flex';
  }

  function updateCenterCard() {
    if (!scrollContainer || !cards.length) return;

    const containerRect = scrollContainer.getBoundingClientRect();
    const containerCenter = containerRect.left + containerRect.width / 2;
    const maxDistance = containerRect.width / 2;

    cards.forEach(card => {
      const cardRect = card.getBoundingClientRect();
      const cardCenter = cardRect.left + cardRect.width / 2;
      const distance = Math.abs(containerCenter - cardCenter);

      // Scale from 0.85 (far) to 1.1 (center)
      const normalizedDistance = Math.min(distance / maxDistance, 1);
      const scale = 1.1 - (normalizedDistance * 0.25);

      card.style.transform = `scale(${scale})`;
      card.style.zIndex = Math.round((1 - normalizedDistance) * 10);
    });
  }

  if (scrollContainer && leftArrow && rightArrow) {
    // Scroll on arrow click
    leftArrow.addEventListener('click', () => {
      scrollContainer.scrollBy({ left: -300, behavior: 'smooth' });
    });

    rightArrow.addEventListener('click', () => {
      scrollContainer.scrollBy({ left: 300, behavior: 'smooth' });
    });

    // Update arrows and center card on scroll
    scrollContainer.addEventListener('scroll', () => {
      updateArrows();
      updateCenterCard();
    });

    // Initial check
    updateArrows();
    updateCenterCard();
  }
</script>

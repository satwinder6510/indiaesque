---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Contact Us"
  description="Get in touch with the Indiaesque team. Questions about experiences, partnership inquiries, or just want to say hello."
  includeFooter={false}
>
  <!-- HERO -->
  <div class="hero">
    <div class="hero-overlay">
      <span class="hero-location">GET IN TOUCH</span>
      <h1 class="hero-title">CONTACT US</h1>
      <p class="hero-subtitle">Questions, feedback, or partnership inquiries? We'd love to hear from you.</p>
    </div>
  </div>

  <!-- CONTENT -->
  <article class="article">
    <div class="article-content">
      <h2>Send Us a Message</h2>
      <form class="contact-form">
        <div class="form-group">
          <label for="name">Your Name</label>
          <input type="text" id="name" name="name" required />
        </div>
        <div class="form-group">
          <label for="email">Email Address</label>
          <input type="email" id="email" name="email" required />
        </div>
        <div class="form-group">
          <label for="subject">Subject</label>
          <select id="subject" name="subject">
            <option value="general">General Inquiry</option>
            <option value="experience">Question About an Experience</option>
            <option value="partnership">Partnership Opportunity</option>
            <option value="feedback">Feedback or Suggestion</option>
          </select>
        </div>
        <div class="form-group">
          <label for="message">Your Message</label>
          <textarea id="message" name="message" rows="6" required></textarea>
        </div>
        <button type="submit" class="submit-btn">Send Message</button>
      </form>

      <h2>Other Ways to Reach Us</h2>
      <ul>
        <li><strong>Email:</strong> <a href="mailto:hello@indiaesque.com">hello@indiaesque.com</a></li>
        <li><strong>Instagram:</strong> <a href="https://instagram.com/indiaesque" target="_blank">@indiaesque</a></li>
        <li><strong>Twitter/X:</strong> <a href="https://twitter.com/indiaesque" target="_blank">@indiaesque</a></li>
      </ul>

      <h2>Partner With Us</h2>
      <p>
        Are you a local guide, experience provider, or tourism business in India?
        We're always looking for authentic partners who share our commitment to quality.
        Email us at <a href="mailto:partners@indiaesque.com">partners@indiaesque.com</a>.
      </p>
    </div>
  </article>

  <!-- NEWSLETTER -->
  <section class="newsletter">
    <div class="newsletter-inner">
      <h2 class="newsletter-title">Stay Up To Date By Subscribing<br/>To Our Newsletter</h2>
      <form class="newsletter-form">
        <input type="text" placeholder="FORENAME" />
        <input type="text" placeholder="SURNAME" />
        <input type="email" placeholder="EMAIL ADDRESS" required />
        <button type="submit">Subscribe</button>
      </form>
    </div>
  </section>

  <!-- CONTACT FOOTER -->
  <section class="contact-section">
    <h3 class="contact-title">Contact</h3>
    <p class="contact-phone">+91 00000 00000</p>
    <p class="contact-address">Indiaesque &bull; Address Line 1<br/>Address Line 2 &bull; 110001</p>
  </section>

  <!-- FOOTER LINKS -->
  <section class="foot-links">
    <div class="foot-col">
      <h4>Destinations</h4>
      <ul>
        <li><a href="/delhi/">Delhi</a></li>
        <li><a href="/jaipur/">Jaipur</a></li>
        <li><a href="/mumbai/">Mumbai</a></li>
        <li><a href="/goa/">Goa</a></li>
        <li><a href="/varanasi/">Varanasi</a></li>
        <li><a href="/kerala/">Kerala</a></li>
      </ul>
    </div>
    <div class="foot-col">
      <h4>Collections</h4>
      <ul>
        <li><a href="#">Food Tours</a></li>
        <li><a href="#">Heritage</a></li>
        <li><a href="#">Cooking</a></li>
        <li><a href="#">Markets</a></li>
        <li><a href="#">Day Trips</a></li>
        <li><a href="#">Art & Craft</a></li>
      </ul>
    </div>
  </section>

  <!-- COPYRIGHT -->
  <footer class="copyright">
    <p>&copy; Indiaesque {new Date().getFullYear()}</p>
    <p class="credit">Designed & Built in India</p>
  </footer>
</BaseLayout>

<style>
  /* HERO */
  .hero {
    width: 100%;
    min-height: 300px;
    background: linear-gradient(135deg, #e07060 0%, #c85a4a 100%);
    display: flex;
    align-items: flex-end;
  }
  .hero-overlay {
    width: 100%;
    padding: 60px 20px 40px;
    text-align: center;
  }
  .hero-location {
    display: block;
    font-size: 10px;
    font-weight: 500;
    letter-spacing: 0.2em;
    color: rgba(255,255,255,0.8);
    margin-bottom: 12px;
  }
  .hero-title {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 32px;
    font-weight: 400;
    letter-spacing: 0.1em;
    line-height: 1.2;
    color: #fff;
    margin: 0 0 15px;
  }
  .hero-subtitle {
    font-size: 14px;
    color: rgba(255,255,255,0.9);
    max-width: 400px;
    margin: 0 auto;
    line-height: 1.5;
  }

  /* ARTICLE */
  .article {
    max-width: 600px;
    margin: 0 auto;
    padding: 30px 20px;
  }
  .article-content {
    font-family: 'Inter', sans-serif;
    font-size: 15px;
    line-height: 1.7;
    color: #333;
  }
  .article-content h2 {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 18px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 40px 0 20px;
    color: #1a1a1a;
  }
  .article-content h2:first-child {
    margin-top: 0;
  }
  .article-content p {
    margin: 0 0 20px;
  }
  .article-content ul {
    margin: 0 0 20px;
    padding-left: 20px;
  }
  .article-content li {
    margin-bottom: 10px;
  }
  .article-content a {
    color: #e07060;
  }
  .article-content a:hover {
    text-decoration: underline;
  }

  /* CONTACT FORM */
  .contact-form {
    margin-bottom: 40px;
  }
  .form-group {
    margin-bottom: 20px;
  }
  .form-group label {
    display: block;
    font-size: 11px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #333;
    margin-bottom: 8px;
  }
  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 14px;
    font-size: 14px;
    border: 1px solid #e5e5e5;
    background: #fff;
    color: #333;
  }
  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: #2a9d8f;
  }
  .submit-btn {
    padding: 14px 30px;
    font-size: 12px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border: none;
    background: #e07060;
    color: #fff;
    cursor: pointer;
  }
  .submit-btn:hover {
    background: #c85a4a;
  }

  /* NEWSLETTER */
  .newsletter {
    background: #2a9d8f;
    padding: 50px 20px;
    text-align: center;
  }
  .newsletter-inner {
    max-width: 320px;
    margin: 0 auto;
  }
  .newsletter-title {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 14px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    line-height: 1.6;
    color: #fff;
    margin: 0 0 30px;
  }
  .newsletter-form {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  .newsletter-form input {
    width: 100%;
    padding: 14px;
    font-size: 12px;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border: none;
    background: #fff;
    color: #333;
  }
  .newsletter-form input::placeholder {
    color: #aaa;
  }
  .newsletter-form button {
    padding: 14px;
    font-size: 12px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border: none;
    background: #e07060;
    color: #fff;
    cursor: pointer;
  }
  .newsletter-form button:hover {
    background: #c85a4a;
  }

  /* CONTACT SECTION */
  .contact-section {
    padding: 40px 20px;
    text-align: center;
    border-bottom: 1px solid #e5e5e5;
  }
  .contact-title {
    font-size: 11px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: #333;
    margin: 0 0 15px;
  }
  .contact-phone {
    font-size: 13px;
    color: #666;
    margin: 0 0 8px;
  }
  .contact-address {
    font-size: 13px;
    color: #666;
    line-height: 1.6;
    margin: 0;
  }

  /* FOOTER LINKS */
  .foot-links {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 30px;
    padding: 30px 20px;
    max-width: 400px;
    margin: 0 auto;
    text-align: center;
  }
  .foot-col {
    text-align: center;
  }
  .foot-col h4 {
    font-size: 11px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: #333;
    margin: 0 0 15px;
  }
  .foot-col ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .foot-col li {
    margin-bottom: 8px;
  }
  .foot-col a {
    font-size: 12px;
    color: #666;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .foot-col a:hover {
    color: #e07060;
  }

  /* COPYRIGHT */
  .copyright {
    padding: 30px 20px;
    text-align: center;
    border-top: 1px solid #e5e5e5;
  }
  .copyright p {
    font-size: 11px;
    color: #999;
    margin: 0 0 5px;
  }
  .credit {
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }
</style>

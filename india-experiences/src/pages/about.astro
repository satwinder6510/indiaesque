---
import BaseLayout from '../layouts/BaseLayout.astro';
import aboutData from '../data/about.json';
import { marked } from 'marked';

// Configure marked
marked.setOptions({ breaks: true, gfm: true });

const { hero, sections, contact } = aboutData;

// Render markdown content
const renderMarkdown = (content: string) => marked(content) as string;

// Format address for display (replace \n with <br/>)
const formattedAddress = contact.address.replace(/\n/g, '<br/>').replace(/•/g, '&bull;');

// Filter sections with content
const contentSections = sections.filter(s => s.content);
---

<BaseLayout
  title="About Indiaesque"
  description="Learn about Indiaesque - your curated guide to authentic India experiences. Our story, mission, and the team behind your next adventure."
  includeFooter={false}
>
  <!-- HERO -->
  <div class="hero">
    <div class="hero-overlay">
      <span class="hero-location">{hero.location}</span>
      <h1 class="hero-title">{hero.title}</h1>
      <p class="hero-subtitle">{hero.subtitle}</p>
    </div>
  </div>

  <!-- CONTENT -->
  <article class="article">
    <div class="article-content">
      {contentSections.map((section, index) => (
        <>
          <h2>{section.title}</h2>
          <div set:html={renderMarkdown(section.content || '')} />
          {/* Add contact link after last section */}
          {index === contentSections.length - 1 && (
            <p>Reach out at <a href={`mailto:${contact.email}`}>{contact.email}</a> or visit our <a href="/contact/">contact page</a>.</p>
          )}
        </>
      ))}
    </div>
  </article>

  <!-- NEWSLETTER -->
  <section class="newsletter">
    <div class="newsletter-inner">
      <h2 class="newsletter-title">Stay Up To Date By Subscribing<br/>To Our Newsletter</h2>
      <form class="newsletter-form">
        <input type="text" placeholder="FORENAME" />
        <input type="text" placeholder="SURNAME" />
        <input type="email" placeholder="EMAIL ADDRESS" required />
        <button type="submit">Subscribe</button>
      </form>
    </div>
  </section>

  <!-- CONTACT -->
  <section class="contact">
    <h3 class="contact-title">Contact</h3>
    <p class="contact-tagline">Curated travel discovery across India.</p>
    <p class="contact-email"><a href={`mailto:${contact.email}`}>{contact.email}</a></p>
    <p class="contact-location">New Delhi, India</p>
  </section>

  <!-- FOOTER LINKS -->
  <section class="foot-links">
    <div class="foot-col">
      <h4>Destinations</h4>
      <ul>
        <li><a href="/delhi/">Delhi</a></li>
        <li><a href="/jaipur/">Jaipur</a></li>
        <li><a href="/mumbai/">Mumbai</a></li>
        <li><a href="/goa/">Goa</a></li>
        <li><a href="/varanasi/">Varanasi</a></li>
        <li><a href="/kerala/">Kerala</a></li>
      </ul>
    </div>
    <div class="foot-col">
      <h4>Collections</h4>
      <ul>
        <li><a href="#">Food Tours</a></li>
        <li><a href="#">Heritage</a></li>
        <li><a href="#">Cooking</a></li>
        <li><a href="#">Markets</a></li>
        <li><a href="#">Day Trips</a></li>
        <li><a href="#">Art & Craft</a></li>
      </ul>
    </div>
  </section>

  <!-- COPYRIGHT -->
  <footer class="copyright">
    <p class="tagline">Editorial travel platform for modern explorers.</p>
  </footer>
</BaseLayout>

<style>
  /* HERO */
  .hero {
    width: 100%;
    min-height: 360px;
    padding-top: 60px; /* Account for fixed header */
    background: linear-gradient(135deg, #2a9d8f 0%, #1a6b61 100%);
    display: flex;
    align-items: flex-end;
  }
  .hero-overlay {
    width: 100%;
    padding: 60px 20px 50px;
    text-align: center;
  }
  .hero-location {
    display: block;
    font-family: 'Muli', sans-serif;
    font-size: 11px;
    font-weight: 500;
    letter-spacing: 0.3em;
    color: rgba(255,255,255,0.8);
    margin-bottom: 16px;
  }
  .hero-title {
    font-family: 'Oswald', sans-serif;
    font-size: 42px;
    font-weight: 300;
    letter-spacing: 0.15em;
    line-height: 1.2;
    color: #fff;
    margin: 0 0 20px;
  }
  .hero-subtitle {
    font-family: 'Muli', sans-serif;
    font-size: 15px;
    font-weight: 300;
    color: rgba(255,255,255,0.9);
    max-width: 450px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* ARTICLE */
  .article {
    max-width: 680px;
    margin: 0 auto;
    padding: 50px 24px 60px;
  }
  .article-content {
    font-family: 'Muli', sans-serif;
    font-size: 16px;
    line-height: 1.8;
    color: #4b5563;
  }
  .article-content :global(h2) {
    font-family: 'Oswald', sans-serif;
    font-size: 20px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin: 48px 0 20px;
    color: #111827;
  }
  .article-content :global(h2:first-child) {
    margin-top: 0;
  }
  .article-content :global(p) {
    margin: 0 0 24px;
  }
  .article-content :global(ul) {
    margin: 0 0 24px;
    padding-left: 0;
    list-style: none;
  }
  .article-content :global(li) {
    margin-bottom: 16px;
    padding-left: 20px;
    position: relative;
  }
  .article-content :global(li::before) {
    content: '—';
    position: absolute;
    left: 0;
    color: #2a9d8f;
  }
  .article-content :global(strong) {
    color: #111827;
    font-weight: 600;
  }
  .article-content :global(a) {
    color: #2a9d8f;
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: border-color 0.2s ease;
  }
  .article-content :global(a:hover) {
    border-bottom-color: #2a9d8f;
  }

  /* NEWSLETTER */
  .newsletter {
    background: #2a9d8f;
    padding: 60px 24px;
    text-align: center;
  }
  .newsletter-inner {
    max-width: 360px;
    margin: 0 auto;
  }
  .newsletter-title {
    font-family: 'Oswald', sans-serif;
    font-size: 16px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    line-height: 1.6;
    color: #fff;
    margin: 0 0 30px;
  }
  .newsletter-form {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  .newsletter-form input {
    width: 100%;
    padding: 16px;
    font-family: 'Muli', sans-serif;
    font-size: 12px;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    border: none;
    background: #fff;
    color: #333;
  }
  .newsletter-form input::placeholder {
    color: #9ca3af;
  }
  .newsletter-form button {
    padding: 16px;
    font-family: 'Muli', sans-serif;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    border: none;
    background: #111827;
    color: #fff;
    cursor: pointer;
    transition: background 0.2s ease;
  }
  .newsletter-form button:hover {
    background: #1f2937;
  }

  /* CONTACT */
  .contact {
    padding: 50px 24px;
    text-align: center;
    background: #f9fafb;
  }
  .contact-title {
    font-family: 'Oswald', sans-serif;
    font-size: 12px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: #111827;
    margin: 0 0 16px;
  }
  .contact-tagline {
    font-family: 'Muli', sans-serif;
    font-size: 15px;
    color: #4b5563;
    margin: 0 0 20px;
  }
  .contact-email {
    font-family: 'Muli', sans-serif;
    font-size: 14px;
    margin: 0 0 8px;
  }
  .contact-email a {
    color: #2a9d8f;
    text-decoration: none;
  }
  .contact-email a:hover {
    text-decoration: underline;
  }
  .contact-location {
    font-family: 'Muli', sans-serif;
    font-size: 14px;
    color: #6b7280;
    margin: 0;
  }

  /* FOOTER LINKS */
  .foot-links {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    padding: 50px 24px;
    max-width: 500px;
    margin: 0 auto;
    text-align: center;
  }
  .foot-col {
    text-align: center;
  }
  .foot-col h4 {
    font-family: 'Oswald', sans-serif;
    font-size: 12px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: #111827;
    margin: 0 0 20px;
  }
  .foot-col ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .foot-col li {
    margin-bottom: 12px;
  }
  .foot-col a {
    font-family: 'Muli', sans-serif;
    font-size: 14px;
    color: #6b7280;
    text-decoration: none;
    transition: color 0.2s ease;
  }
  .foot-col a:hover {
    color: #2a9d8f;
  }

  /* COPYRIGHT */
  .copyright {
    padding: 24px;
    text-align: center;
    border-top: 1px solid #e5e7eb;
  }
  .copyright .tagline {
    font-family: 'Muli', sans-serif;
    font-size: 12px;
    font-style: italic;
    color: #9ca3af;
    margin: 0;
  }
</style>

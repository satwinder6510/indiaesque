---
import BaseLayout from '../layouts/BaseLayout.astro';
import aboutData from '../data/about.json';

const { hero, sections, contact } = aboutData;

// Find sections by ID
const ourStory = sections.find(s => s.id === 'our-story');
const ourMission = sections.find(s => s.id === 'our-mission');
const whatMakesUsDifferent = sections.find(s => s.id === 'what-makes-us-different');
const getInTouch = sections.find(s => s.id === 'get-in-touch');

// Format address for display (replace \n with <br/>)
const formattedAddress = contact.address.replace(/\n/g, '<br/>').replace(/â€¢/g, '&bull;');
---

<BaseLayout
  title="About Indiaesque"
  description="Learn about Indiaesque - your curated guide to authentic India experiences. Our story, mission, and the team behind your next adventure."
  includeFooter={false}
>
  <!-- HERO -->
  <div class="hero">
    <div class="hero-overlay">
      <span class="hero-location">{hero.location}</span>
      <h1 class="hero-title">{hero.title}</h1>
      <p class="hero-subtitle">{hero.subtitle}</p>
    </div>
  </div>

  <!-- CONTENT -->
  <article class="article">
    <div class="article-content">
      {ourStory && (
        <>
          <h2>{ourStory.title}</h2>
          {ourStory.paragraphs?.map(p => <p>{p}</p>)}
        </>
      )}

      {ourMission && (
        <>
          <h2>{ourMission.title}</h2>
          {ourMission.paragraphs?.map(p => <p>{p}</p>)}
        </>
      )}

      {whatMakesUsDifferent && (
        <>
          <h2>{whatMakesUsDifferent.title}</h2>
          <ul>
            {whatMakesUsDifferent.highlights?.map(h => (
              <li><strong>{h.title}</strong> - {h.description}</li>
            ))}
          </ul>
        </>
      )}

      {getInTouch && (
        <>
          <h2>{getInTouch.title}</h2>
          {getInTouch.paragraphs?.map(p => <p>{p}</p>)}
          <p>Reach out at <a href={`mailto:${contact.email}`}>{contact.email}</a> or visit our <a href="/contact/">contact page</a>.</p>
        </>
      )}
    </div>
  </article>

  <!-- NEWSLETTER -->
  <section class="newsletter">
    <div class="newsletter-inner">
      <h2 class="newsletter-title">Stay Up To Date By Subscribing<br/>To Our Newsletter</h2>
      <form class="newsletter-form">
        <input type="text" placeholder="FORENAME" />
        <input type="text" placeholder="SURNAME" />
        <input type="email" placeholder="EMAIL ADDRESS" required />
        <button type="submit">Subscribe</button>
      </form>
    </div>
  </section>

  <!-- CONTACT -->
  <section class="contact">
    <h3 class="contact-title">Contact</h3>
    <p class="contact-phone">{contact.phone}</p>
    <p class="contact-address" set:html={formattedAddress} />
  </section>

  <!-- FOOTER LINKS -->
  <section class="foot-links">
    <div class="foot-col">
      <h4>Destinations</h4>
      <ul>
        <li><a href="/delhi/">Delhi</a></li>
        <li><a href="/jaipur/">Jaipur</a></li>
        <li><a href="/mumbai/">Mumbai</a></li>
        <li><a href="/goa/">Goa</a></li>
        <li><a href="/varanasi/">Varanasi</a></li>
        <li><a href="/kerala/">Kerala</a></li>
      </ul>
    </div>
    <div class="foot-col">
      <h4>Collections</h4>
      <ul>
        <li><a href="#">Food Tours</a></li>
        <li><a href="#">Heritage</a></li>
        <li><a href="#">Cooking</a></li>
        <li><a href="#">Markets</a></li>
        <li><a href="#">Day Trips</a></li>
        <li><a href="#">Art & Craft</a></li>
      </ul>
    </div>
  </section>

  <!-- COPYRIGHT -->
  <footer class="copyright">
    <p>&copy; Indiaesque {new Date().getFullYear()}</p>
    <p class="credit">Designed & Built in India</p>
  </footer>
</BaseLayout>

<style>
  /* HERO */
  .hero {
    width: 100%;
    min-height: 300px;
    background: linear-gradient(135deg, #2a9d8f 0%, #1a6b61 100%);
    display: flex;
    align-items: flex-end;
  }
  .hero-overlay {
    width: 100%;
    padding: 60px 20px 40px;
    text-align: center;
  }
  .hero-location {
    display: block;
    font-size: 10px;
    font-weight: 500;
    letter-spacing: 0.2em;
    color: rgba(255,255,255,0.8);
    margin-bottom: 12px;
  }
  .hero-title {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 32px;
    font-weight: 400;
    letter-spacing: 0.1em;
    line-height: 1.2;
    color: #fff;
    margin: 0 0 15px;
  }
  .hero-subtitle {
    font-size: 14px;
    color: rgba(255,255,255,0.9);
    max-width: 400px;
    margin: 0 auto;
    line-height: 1.5;
  }

  /* ARTICLE */
  .article {
    max-width: 600px;
    margin: 0 auto;
    padding: 30px 20px;
  }
  .article-content {
    font-family: 'Inter', sans-serif;
    font-size: 15px;
    line-height: 1.7;
    color: #333;
  }
  .article-content :global(h2) {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 18px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 40px 0 20px;
    color: #1a1a1a;
  }
  .article-content :global(h2:first-child) {
    margin-top: 0;
  }
  .article-content :global(p) {
    margin: 0 0 20px;
  }
  .article-content :global(ul) {
    margin: 0 0 20px;
    padding-left: 20px;
  }
  .article-content :global(li) {
    margin-bottom: 10px;
  }
  .article-content :global(a) {
    color: #e07060;
  }
  .article-content :global(a:hover) {
    text-decoration: underline;
  }

  /* NEWSLETTER */
  .newsletter {
    background: #2a9d8f;
    padding: 50px 20px;
    text-align: center;
  }
  .newsletter-inner {
    max-width: 320px;
    margin: 0 auto;
  }
  .newsletter-title {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 14px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    line-height: 1.6;
    color: #fff;
    margin: 0 0 30px;
  }
  .newsletter-form {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  .newsletter-form input {
    width: 100%;
    padding: 14px;
    font-size: 12px;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border: none;
    background: #fff;
    color: #333;
  }
  .newsletter-form input::placeholder {
    color: #aaa;
  }
  .newsletter-form button {
    padding: 14px;
    font-size: 12px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border: none;
    background: #e07060;
    color: #fff;
    cursor: pointer;
  }
  .newsletter-form button:hover {
    background: #c85a4a;
  }

  /* CONTACT */
  .contact {
    padding: 40px 20px;
    text-align: center;
    border-bottom: 1px solid #e5e5e5;
  }
  .contact-title {
    font-size: 11px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: #333;
    margin: 0 0 15px;
  }
  .contact-phone {
    font-size: 13px;
    color: #666;
    margin: 0 0 8px;
  }
  .contact-address {
    font-size: 13px;
    color: #666;
    line-height: 1.6;
    margin: 0;
  }

  /* FOOTER LINKS */
  .foot-links {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 30px;
    padding: 30px 20px;
    max-width: 400px;
    margin: 0 auto;
    text-align: center;
  }
  .foot-col {
    text-align: center;
  }
  .foot-col h4 {
    font-size: 11px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: #333;
    margin: 0 0 15px;
  }
  .foot-col ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .foot-col li {
    margin-bottom: 8px;
  }
  .foot-col a {
    font-size: 12px;
    color: #666;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .foot-col a:hover {
    color: #e07060;
  }

  /* COPYRIGHT */
  .copyright {
    padding: 30px 20px;
    text-align: center;
    border-top: 1px solid #e5e5e5;
  }
  .copyright p {
    font-size: 11px;
    color: #999;
    margin: 0 0 5px;
  }
  .credit {
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }
</style>

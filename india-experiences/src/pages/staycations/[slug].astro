  .attractions-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 8px;
  }

  .attractions-list li {
    font-family: 'Muli', sans-serif;
    font-size: 14px;
    color: #4b5563;
    padding: 8px 0 8px 24px;

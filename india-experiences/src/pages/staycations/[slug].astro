---
import BaseLayout from '../../layouts/BaseLayout.astro';
import GygWidget from '../../components/GygWidget.astro';
import staycationsData from '../../data/staycations.json';
import { searchAttractions } from '../../lib/viator';

export const prerender = true;

export function getStaticPaths() {
  return staycationsData.map((stay) => ({
    params: { slug: stay.slug },
    props: { staycation: stay }
  }));
}

const { staycation } = Astro.props;

// Load tours from Viator API
const toursConfig = staycation.tours || { enabled: false };

// Known Viator destination IDs (from viator.com URLs like /New-Delhi/d804-ttd)
const VIATOR_DEST_IDS: Record<string, number> = {
  'Delhi': 804,      // New Delhi
  'Jaipur': 1469,
  'Mumbai': 953,
  'Goa': 4704,
  'Agra': 4282,
};

let viatorTours: any[] = [];
if (toursConfig.enabled) {
  try {
    // Use known destination ID or fall back to configured ID
    const cityName = staycation.location || 'Delhi';
    const destId = VIATOR_DEST_IDS[cityName] || toursConfig.viatorDestinationId || 804;
    console.log('Using Viator destination ID:', destId, 'for', cityName);

    const attractions = await searchAttractions({
      destId: destId,
      limit: 6,
    });
    viatorTours = attractions.map(a => ({
      title: a.title,
      description: '',
      duration: `${a.productCount} experiences`,
      webURL: a.attractionUrl,
      price: 0,
      rating: a.rating,
      reviewCount: a.reviewCount,
    }));
  } catch (error) {
    console.error('Failed to load tours:', error);
  }
}

// Default values for extended data
const overview = staycation.overview || {
  description: staycation.description || '',
  highlights: [],
  checkIn: '2:00 PM',
  checkOut: '11:00 AM',
  amenities: []
};

const rooms = staycation.rooms || [];
const destination = staycation.destination || {
  name: staycation.location || '',
  description: '',
  attractions: [],
  distanceFromAirport: '',
  distanceFromRailway: ''
};
const transfers = staycation.transfers || {
  airportPickup: { available: false, price: 0 },
  railwayPickup: { available: false, price: 0 }
};
const booking = staycation.booking || {
  email: '',
  phone: '',
  whatsapp: '',
  externalUrl: ''
};
const gallery = staycation.gallery || [];
const whoItSuits = staycation.whoItSuits || '';
const tours = staycation.tours || {
  enabled: false,
  source: 'viator',
  viatorDestinationId: 0,
  viatorTagIds: [],
  customTourIds: []
};
---

<BaseLayout
  title={staycation.name}
  description={overview.description || staycation.description}
>
  <!-- Breadcrumb -->
  <nav class="breadcrumb">
    <a href="/">Home</a>
    <span class="separator">/</span>
    <a href="/staycations/">Staycations</a>
    <span class="separator">/</span>
    <span>{staycation.name}</span>
  </nav>

  <!-- Hero -->
  <section class="hero">
    <img
      src={staycation.heroImage}
      alt={staycation.name}
      class="hero-bg"
    />
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <p class="hero-location">{staycation.location}</p>
      <h1 class="hero-title">{staycation.name.toUpperCase()}</h1>
    </div>
  </section>

  <div class="content-wrapper">
    <!-- Quick Info Bar -->
    <div class="quick-info">
      <div class="info-item">
        <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
          <path d="M12 6v6l4 2" stroke-linecap="round"/>
          <circle cx="12" cy="12" r="10"/>
        </svg>
        <div>
          <span class="info-label">Check-in</span>
          <span class="info-value">{overview.checkIn}</span>
        </div>
      </div>
      <div class="info-item">
        <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
          <path d="M12 6v6l-4 2" stroke-linecap="round"/>
          <circle cx="12" cy="12" r="10"/>
        </svg>
        <div>
          <span class="info-label">Check-out</span>
          <span class="info-value">{overview.checkOut}</span>
        </div>
      </div>
      {destination.distanceFromAirport && (
        <div class="info-item">
          <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
            <path d="M21 16v-2l-8-5V3.5a1.5 1.5 0 00-3 0V9l-8 5v2l8-2.5V19l-2 1.5V22l3.5-1 3.5 1v-1.5L13 19v-5.5l8 2.5z"/>
          </svg>
          <div>
            <span class="info-label">Airport</span>
            <span class="info-value">{destination.distanceFromAirport}</span>
          </div>
        </div>
      )}
    </div>

    <!-- Gallery -->
    {gallery.length > 0 && (
      <section class="gallery-section">
        <h2 class="section-title">GALLERY</h2>
        <div class="gallery-scroll">
          {gallery.map((img) => (
            <div class="gallery-item">
              <img src={img.url} alt={img.alt || staycation.name} loading="lazy" />
            </div>
          ))}
        </div>
      </section>
    )}

    <!-- Hotel Overview -->
    <section class="overview-section">
      <h2 class="section-title">ABOUT THE PROPERTY</h2>
      <div class="overview-content">
        {(overview.description || staycation.description || '').split('\n\n').map((block) => {
          const trimmed = block.trim();
          const isHeading = trimmed.length < 50 && !trimmed.endsWith('.') && !trimmed.endsWith(':') && !trimmed.includes('\n');
          return isHeading ? (
            <h3 class="overview-heading">{trimmed}</h3>
          ) : (
            <p class="overview-text">{trimmed}</p>
          );
        })}
      </div>

      {overview.highlights?.length > 0 && (
        <div class="highlights">
          <h3 class="subsection-title">Highlights</h3>
          <ul class="highlights-list">
            {overview.highlights.map((h) => (
              <li>{h}</li>
            ))}
          </ul>
        </div>
      )}

      {overview.amenities?.length > 0 && (
        <div class="amenities">
          <h3 class="subsection-title">Amenities</h3>
          <div class="amenities-grid">
            {overview.amenities.map((a) => (
              <span class="amenity-tag">{a}</span>
            ))}
          </div>
        </div>
      )}
    </section>

    <!-- Who it Suits -->
    {whoItSuits && (
      <section class="suits-section">
        <h2 class="section-title">WHO IT SUITS</h2>
        <div class="suits-content">
          {whoItSuits.split('\n\n').map((block) => {
            const trimmed = block.trim();
            const isHeading = trimmed.length < 50 && !trimmed.endsWith('.') && !trimmed.endsWith(':') && !trimmed.includes('\n');
            return isHeading ? (
              <h3 class="suits-heading">{trimmed}</h3>
            ) : (
              <p class="suits-text">{trimmed}</p>
            );
          })}
        </div>
      </section>
    )}

    <!-- Room Types -->
    {rooms.length > 0 && (
      <section class="rooms-section">
        <h2 class="section-title">ROOM TYPES</h2>
        <div class="rooms-grid">
          {rooms.map((room) => (
            <div class="room-card">
              <div class="room-header">
                <h3 class="room-name">{room.name}</h3>
                <div class="room-price">
                  <span class="price-amount">‚Çπ{room.pricePerNight?.toLocaleString('en-IN')}</span>
                  <span class="price-period">per night</span>
                </div>
              </div>
              <p class="room-desc">{room.description}</p>
              <div class="room-meta">
                <span class="room-guests">Up to {room.maxGuests} guests</span>
              </div>
              {room.amenities?.length > 0 && (
                <div class="room-amenities">
                  {room.amenities.map((a) => (
                    <span class="room-amenity">{a}</span>
                  ))}
                </div>
              )}
            </div>
          ))}
        </div>
      </section>
    )}

    <!-- Destination -->
    {(destination.name || destination.description) && (
      <section class="destination-section">
        <h2 class="section-title">LOCAL AREA</h2>
        {destination.description && (
          <p class="destination-text">{destination.description}</p>
        )}

        {destination.attractions?.length > 0 && (
          <div class="attractions">
            <h3 class="subsection-title">Nearby Attractions</h3>
            <ul class="attractions-list">
              {destination.attractions.map((a) => (
                <li>{a}</li>
              ))}
            </ul>
          </div>
        )}
      </section>
    )}

    <!-- Transfers -->
    {(transfers.airportPickup?.available || transfers.railwayPickup?.available) && (
      <section class="transfers-section">
        <h2 class="section-title">TRANSFERS</h2>
        <div class="transfers-grid">
          {transfers.airportPickup?.available && (
            <div class="transfer-card">
              <svg width="32" height="32" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                <path d="M21 16v-2l-8-5V3.5a1.5 1.5 0 00-3 0V9l-8 5v2l8-2.5V19l-2 1.5V22l3.5-1 3.5 1v-1.5L13 19v-5.5l8 2.5z"/>
              </svg>
              <h3>Airport Pickup</h3>
              <p class="transfer-price">‚Çπ{transfers.airportPickup.price?.toLocaleString('en-IN')}</p>
            </div>
          )}
          {transfers.railwayPickup?.available && (
            <div class="transfer-card">
              <svg width="32" height="32" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                <path d="M4 11V8a1 1 0 011-1h14a1 1 0 011 1v3M4 11v7a1 1 0 001 1h2m-3-8h16m0 0v7a1 1 0 01-1 1h-2m0 0v2m0-2H7m0 0v2"/>
              </svg>
              <h3>Railway Station Pickup</h3>
              <p class="transfer-price">‚Çπ{transfers.railwayPickup.price?.toLocaleString('en-IN')}</p>
            </div>
          )}
        </div>
      </section>
    )}

    <!-- Tours Section -->
    {tours.enabled && viatorTours.length > 0 && (
      <section class="tours-section">
        <h2 class="section-title">EXPERIENCES & TOURS</h2>
        <p class="tours-intro">Discover amazing experiences near {staycation.name}</p>

        <div class="tours-list">
          {viatorTours.map(tour => (
            <a href={tour.webURL} class="tour-item" target="_blank" rel="noopener">
              <div class="tour-item-main">
                <h3 class="tour-title">{tour.title}</h3>
                <p class="tour-description">{tour.description}</p>
                <div class="tour-meta">
                  <span class="tour-duration">{tour.duration}</span>
                  {tour.rating > 0 && <span class="tour-rating">‚òÖ {tour.rating} ({tour.reviewCount} reviews)</span>}
                </div>
              </div>
              <div class="tour-price-col">
                <span class="tour-price-label">From</span>
                <span class="tour-price">‚Çπ{tour.price?.toLocaleString('en-IN')}</span>
              </div>
            </a>
          ))}
        </div>
      </section>
    )}

    <!-- Booking CTA -->
    <section class="booking-section">
      <h2 class="section-title">BOOK YOUR STAY</h2>
      <p class="booking-text">Ready to experience {staycation.name}? Get in touch with us to book your stay or enquire about availability.</p>

      <div class="booking-buttons">
        {booking.whatsapp && (
          <a href={`https://wa.me/${booking.whatsapp.replace(/[^0-9]/g, '')}?text=Hi, I'm interested in booking ${staycation.name}`} class="btn btn-whatsapp" target="_blank" rel="noopener">
            <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            WhatsApp Enquiry
          </a>
        )}
        {booking.externalUrl && (
          <a href={booking.externalUrl} class="btn btn-book" target="_blank" rel="noopener">
            Book Now
          </a>
        )}
        {booking.email && (
          <a href={`mailto:${booking.email}?subject=Booking Enquiry - ${staycation.name}`} class="btn btn-email">
            Email Us
          </a>
        )}
        {booking.phone && (
          <a href={`tel:${booking.phone}`} class="btn btn-phone">
            <svg width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"/>
            </svg>
            {booking.phone}
          </a>
        )}
      </div>
    </section>
  </div>

  <!-- GetYourGuide Availability Widgets -->
  {(toursConfig.gygEnabled !== false) && toursConfig.gygTourIds?.length > 0 && (
    toursConfig.gygTourIds.filter((id: string) => id).map((tourId: string) => (
      <GygWidget tourId={tourId} />
    ))
  )}
</BaseLayout>


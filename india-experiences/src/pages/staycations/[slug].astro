    margin: 0;
  }

  .room-price {
    text-align: right;
  }

  .price-amount {
    font-family: 'Muli', sans-serif;
    font-size: 20px;
    font-weight: 700;
    color: #0d9488;
    display: block;
  }

  .price-period {
    font-family: 'Muli', sans-serif;
    font-size: 11px;
    color: #6b7280;
  }

  .room-desc {
    font-family: 'Muli', sans-serif;
    font-size: 14px;
    line-height: 1.6;
    color: #6b7280;
    margin: 0 0 12px 0;
  }

  .room-meta {
    font-family: 'Muli', sans-serif;
    font-size: 13px;
    color: #6b7280;
    margin-bottom: 12px;
  }

  .room-amenities {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
  }

  .room-amenity {
    font-family: 'Muli', sans-serif;
    font-size: 11px;
    padding: 4px 10px;
    background: #f9fafb;
    border: 1px solid #e5e7eb;
    border-radius: 4px;
    color: #6b7280;
  }


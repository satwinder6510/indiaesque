  /* Overview */
  .overview-section {
    padding: 48px 0;
    border-bottom: 1px solid #e5e7eb;
  }

  .overview-content {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .overview-heading {
    font-family: 'Oswald', sans-serif;
    font-size: 18px;
    font-weight: 400;
    letter-spacing: 0.05em;
    color: #111827;
    margin: 16px 0 0 0;
  }

  .overview-heading:first-child {
    margin-top: 0;
  }

  .overview-text {
    font-family: 'Muli', sans-serif;
    font-size: 16px;
    line-height: 1.8;
    color: #4b5563;
    margin: 0;
  }

  /* Who it Suits */
  .suits-section {
    padding: 48px 0;
    border-bottom: 1px solid #e5e7eb;
  }

  .suits-content {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .suits-heading {
    font-family: 'Oswald', sans-serif;
    font-size: 18px;
    font-weight: 400;
    letter-spacing: 0.05em;
    color: #111827;
    margin: 16px 0 0 0;

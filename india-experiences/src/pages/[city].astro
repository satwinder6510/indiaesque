      grid-template-columns: repeat(3, 1fr);
      max-width: 1000px;
      margin: 0 auto;
    }

    .experiences-grid {
      grid-template-columns: repeat(2, 1fr);
      max-width: 900px;
      margin: 0 auto;
    }

    .journals-list {
      max-width: 600px;
      margin: 0 auto 24px;
    }

    .cta-section {
      padding: 80px 48px;
    }

    .cta-section h2 {
      font-size: 28px;
    }
  }

  @media (min-width: 1024px) {
    .experiences-grid {
      grid-template-columns: repeat(3, 1fr);
      max-width: 1100px;
    }
  }
</style>

---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { DESTINATIONS, searchProducts, getDestinationId, VIATOR_TAGS } from '../lib/viator';
import citiesData from '../data/cities.json';
import { marked } from 'marked';

export const prerender = true;

// Configure marked for clean output
marked.setOptions({
  gfm: true,
  breaks: false,
});

// Convert markdown to HTML, removing the main H1 title
function markdownToHtml(md: string): string {
  if (!md) return '';
  // Remove the first H1 heading
  const withoutH1 = md.replace(/^#\s+[^\n]+\n*/m, '');
  return marked.parse(withoutH1) as string;
}

// Load hub.json files for each city
async function loadHubData(citySlug: string) {
  try {
    const hubFiles = import.meta.glob('../data/content/*/hub.json', { eager: true });
    const hubPath = `../data/content/${citySlug}/hub.json`;
    return hubFiles[hubPath] as any;
  } catch {
    return null;
  }
}

export async function getStaticPaths() {
  return Object.keys(DESTINATIONS).map(city => ({
    params: { city },
    props: { cityData: DESTINATIONS[city as keyof typeof DESTINATIONS] }
  }));
}

const { city } = Astro.params;
const { cityData } = Astro.props;

// Get city data from cities.json
const cityFromData = citiesData.find(c => c.slug === city);

// Load hub data from JSON file (created by admin)
const hubData = await loadHubData(city as string);

// Check if we have generated content
const hasGeneratedContent = hubData?.generatedContent && hubData.generatedContent.length > 100;

// Convert markdown to HTML if we have generated content
const generatedHtml = hasGeneratedContent ? markdownToHtml(hubData.generatedContent) : null;

// Use description from cities.json or hub.json
const description = hubData?.description || cityFromData?.description || `Discover ${cityData.name}, India.`;
// Use heroImage from data file, fallback to Unsplash
const heroImage = cityFromData?.heroImage || 'https://images.unsplash.com/photo-1587474260584-136574528ed5?w=1600&q=80';

// Tagline for hero (only used if no generated content)
const taglines: Record<string, string> = {
  delhi: 'WHERE HISTORY MEETS MODERNITY',
  jaipur: 'THE PINK CITY',
  mumbai: 'THE CITY OF DREAMS',
  goa: 'SUN, SAND & SOUL',
  agra: 'HOME OF THE TAJ MAHAL',
  varanasi: 'THE SPIRITUAL HEART OF INDIA',
  kolkata: 'THE CITY OF JOY',
  udaipur: 'THE CITY OF LAKES',
  kerala: 'GOD\'S OWN COUNTRY',
};
const tagline = taglines[city as string] || 'DISCOVER INDIA';

// Get curated experiences from content collection
const allPages = await getCollection('pages');
const curatedExperiences = allPages
  .filter(page => page.data.type === 'experience' && page.data.city === city)
  .slice(0, 3);

// Get more experiences from Viator (or mock data)
const destId = getDestinationId(city as string);
const viatorExperiences = destId ? await searchProducts({ destId, limit: 6 }) : [];

// Get related journal articles for SEO funnel
const journalArticles = allPages
  .filter(page => page.data.type === 'paa' && page.data.city === city)
  .sort((a, b) => new Date(b.data.dateModified).getTime() - new Date(a.data.dateModified).getTime())
  .slice(0, 3);

const getSlug = (entry: any) => entry.id.split('/').pop()?.replace('.md', '') || '';
---

<BaseLayout
  title={`${cityData.name} Travel Guide | Indiaesque`}
  description={description}
>
  <!-- Hero -->
  <section class="hero">
    <img src={heroImage} alt={cityData.name} class="hero-bg" />
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <span class="hero-tagline">{tagline}</span>
      <h1 class="hero-title">{cityData.name.toUpperCase()}</h1>
    </div>
  </section>

  <!-- Breadcrumb -->
  <nav class="breadcrumb">
    <a href="/">Home</a>
    <span class="separator">/</span>
    <span>{cityData.name}</span>
  </nav>

  <!-- Generated Hub Content (from admin) -->
  {generatedHtml ? (
    <section class="hub-content">
      <div class="hub-content-inner" set:html={generatedHtml} />
    </section>
  ) : (
    <section class="intro">
      <p class="intro-text">{description}</p>
    </section>
  )}

  <!-- Curated Experiences (Your Hand-Picked Content) -->
  {curatedExperiences.length > 0 && (
    <section class="curated-section">
      <h2>Our Curated Experiences</h2>
      <p class="section-desc">Hand-picked journeys designed by our local experts</p>
      <div class="curated-grid">
        {curatedExperiences.map(exp => (
          <a href={`/experiences/${getSlug(exp)}/`} class="curated-card">
            <div class="card-image">
              <img src={exp.data.cardImage || 'https://images.unsplash.com/photo-1524492412937-b28074a5d7da?w=600&q=80'} alt={exp.data.title} />
            </div>
            <div class="card-content">
              <h3>{exp.data.title}</h3>
              <p>{exp.data.description}</p>
            </div>
          </a>
        ))}
      </div>
    </section>
  )}

  <!-- More Experiences (Viator API) -->
  <section class="viator-section">
    <h2>More Experiences in {cityData.name}</h2>
    <p class="section-desc">Popular tours and activities from our partners</p>
    <div class="experiences-grid">
      {viatorExperiences.map(exp => (
        <a href={exp.bookingLink} target="_blank" rel="noopener" class="experience-card">
          <div class="card-image">
            <img src={exp.imageUrl} alt={exp.title} loading="lazy" />
            <div class="card-info">
              <span class="card-duration">{exp.duration}</span>
            </div>
          </div>
          <div class="card-content">
            <h3>{exp.title}</h3>
            <div class="card-meta">
              <span class="rating">{'★'.repeat(Math.round(exp.rating))} {exp.rating.toFixed(1)}</span>
              <span class="reviews">({exp.reviewCount} reviews)</span>
            </div>
            <p class="card-desc">{exp.description}</p>
            <div class="card-footer">
              <span class="price">From ${exp.price.amount}</span>
              <span class="book-btn">BOOK NOW</span>
            </div>
          </div>
        </a>
      ))}
    </div>
  </section>

  <!-- Related Journals (SEO Funnel) -->
  {journalArticles.length > 0 && (
    <section class="journals-section">
      <h2>Travel Guides for {cityData.name}</h2>
      <div class="journals-list">
        {journalArticles.map(article => (
          <a href={`/journal/${getSlug(article)}/`} class="journal-link">
            <span class="journal-title">{article.data.title}</span>
            <span class="arrow">→</span>
          </a>
        ))}
      </div>
      <a href="/journal/" class="view-all">View All Journals</a>
    </section>
  )}

  <!-- CTA -->
  <section class="cta-section">
    <h2>PLAN YOUR {cityData.name.toUpperCase()} JOURNEY</h2>
    <p>Let us help you create your perfect itinerary</p>
    <a href="/contact/" class="cta-btn">GET IN TOUCH</a>
  </section>
</BaseLayout>


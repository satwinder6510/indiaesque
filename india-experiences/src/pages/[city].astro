    justify-content: space-between;
    align-items: center;
    padding-top: 12px;
    border-top: 1px solid #f3f4f6;
  }

  .price {
    font-family: 'Muli', sans-serif;
    font-size: 14px;
    font-weight: 600;
    color: #111827;
  }

  .book-btn {
    font-family: 'Muli', sans-serif;
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 0.1em;
    color: #0d9488;
  }

  /* Journals Section */
  .journals-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
    margin-bottom: 24px;
  }

  .journal-link {
    display: flex;
    justify-content: space-between;

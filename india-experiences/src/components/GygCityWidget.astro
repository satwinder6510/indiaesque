---
interface Props {
  city: string;
  numberOfItems?: number;
  currency?: string;
}

const {
  city,
  numberOfItems = 3,
  currency = 'INR',
} = Astro.props;

const partnerId = import.meta.env.GYG_PARTNER_ID || 'OBZX5NA';
---

<section class="gyg-section">
  <h2 class="gyg-title">BOOK EXPERIENCES IN {city.toUpperCase()}</h2>
  <p class="gyg-intro">Browse and book tours with live availability</p>

  <div class="gyg-container">
    <div
      data-gyg-href="https://widget.getyourguide.com/default/activities.frame"
      data-gyg-locale-code="en-US"
      data-gyg-widget="activities"
      data-gyg-number-of-items={String(numberOfItems)}
      data-gyg-partner-id={partnerId}
      data-gyg-q={city}
      data-gyg-currency={currency}
    ></div>
  </div>
</section>

<style>
  .gyg-section {
    padding: 48px 24px;
    background-color: #f9fafb;
  }

  .gyg-title {
    font-family: 'Oswald', sans-serif;
    font-size: 22px;
    font-weight: 400;
    letter-spacing: 0.08em;
    color: #111827;
    margin: 0 0 8px 0;
  }

  .gyg-intro {
    font-family: 'Muli', sans-serif;
    font-size: 14px;
    color: #6b7280;
    margin: 0 0 32px 0;
  }

  .gyg-container {
    min-height: 300px;
  }

  @media (min-width: 768px) {
    .gyg-section {
      padding: 64px 48px;
    }

    .gyg-title {
      text-align: center;
      font-size: 26px;
    }

    .gyg-intro {
      text-align: center;
    }
  }
</style>

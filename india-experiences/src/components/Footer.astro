---
// Footer Component
const destinations = [
  { name: 'Delhi', href: '/delhi/' },
  { name: 'Jaipur', href: '/jaipur/' },
  { name: 'Mumbai', href: '/mumbai/' },
  { name: 'Goa', href: '/goa/' },
  { name: 'Varanasi', href: '/varanasi/' },
  { name: 'Kerala', href: '/kerala/' },
];

const collections = [
  { name: 'Food Tours', href: '#' },
  { name: 'Heritage', href: '#' },
  { name: 'Cooking', href: '#' },
  { name: 'Markets', href: '#' },
  { name: 'Day Trips', href: '#' },
  { name: 'Art & Craft', href: '#' },
];
---

<footer class="footer">
  <div class="footer-inner">
    <!-- Contact -->
    <div class="footer-contact">
      <h3 class="footer-heading">CONTACT</h3>
      <p class="footer-tagline">Curated travel discovery across India.</p>
      <p class="footer-email"><a href="mailto:hello@indiaesque.in">hello@indiaesque.in</a></p>
      <p class="footer-location">New Delhi, India</p>
    </div>

    <!-- Links Grid -->
    <div class="footer-grid">
      <div class="footer-col">
        <h4 class="footer-col-title">DESTINATIONS</h4>
        <ul class="footer-links">
          {destinations.map(item => (
            <li><a href={item.href}>{item.name}</a></li>
          ))}
        </ul>
      </div>

      <div class="footer-col">
        <h4 class="footer-col-title">COLLECTIONS</h4>
        <ul class="footer-links">
          {collections.map(item => (
            <li><a href={item.href}>{item.name}</a></li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom -->
    <div class="footer-bottom">
      <p class="footer-tagline-bottom">Editorial travel platform for modern explorers.</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: #f9fafb;
    padding: 64px 24px 32px;
  }

  .footer-inner {
    max-width: 600px;
    margin: 0 auto;
  }

  /* Contact */
  .footer-contact {
    text-align: center;
    margin-bottom: 48px;
  }

  .footer-heading {
    font-family: 'Oswald', sans-serif;
    font-size: 12px;
    font-weight: 400;
    letter-spacing: 0.2em;
    color: #111827;
    margin: 0 0 16px;
  }

  .footer-tagline {
    font-family: 'Muli', sans-serif;
    font-size: 15px;
    color: #4b5563;
    margin: 0 0 20px;
  }

  .footer-email {
    font-family: 'Muli', sans-serif;
    font-size: 14px;
    margin: 0 0 8px;
  }

  .footer-email a {
    color: #2a9d8f;
    text-decoration: none;
  }

  .footer-email a:hover {
    text-decoration: underline;
  }

  .footer-location {
    font-family: 'Muli', sans-serif;
    font-size: 14px;
    color: #6b7280;
    margin: 0;
  }

  /* Links Grid */
  .footer-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 40px;
    margin-bottom: 48px;
    text-align: center;
    max-width: 400px;
    margin-left: auto;
    margin-right: auto;
  }

  .footer-col-title {
    font-family: 'Oswald', sans-serif;
    font-size: 12px;
    font-weight: 400;
    letter-spacing: 0.2em;
    color: #111827;
    margin: 0 0 20px;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .footer-links a {
    font-family: 'Muli', sans-serif;
    font-size: 14px;
    color: #6b7280;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer-links a:hover {
    color: #2a9d8f;
  }

  /* Bottom */
  .footer-bottom {
    text-align: center;
    padding-top: 24px;
    border-top: 1px solid #e5e7eb;
  }

  .footer-tagline-bottom {
    font-family: 'Muli', sans-serif;
    font-size: 12px;
    font-style: italic;
    color: #9ca3af;
    margin: 0;
  }
</style>

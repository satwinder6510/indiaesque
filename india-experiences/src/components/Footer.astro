---
import cities from '../data/cities.json';
import categories from '../data/categories.json';

const destinations = cities.slice(0, 6);
const collections = [
  { name: 'Food Tours', href: '/food-tours-india/' },
  { name: 'Heritage Walks', href: '/heritage-walks-india/' },
  { name: 'Cooking Classes', href: '/cooking-classes-india/' },
  { name: 'Day Trips', href: '/day-trips-india/' },
  { name: 'Markets', href: '/markets-shopping-india/' },
  { name: 'Art & Craft', href: '/art-craft-workshops-india/' },
];
---

<footer class="site-footer">
  <div class="footer-container">
    <!-- Contact Section -->
    <div class="footer-section footer-contact">
      <h3>Contact</h3>
      <p class="footer-phone">+91 00000 00000</p>
      <address class="footer-address">
        Travel Curated &bull; Address Line 1<br />
        Address Line 2 &bull; AA1 1AA
      </address>
    </div>

    <!-- Destinations -->
    <div class="footer-section">
      <h3>Destinations</h3>
      <ul class="footer-links">
        {destinations.map(city => (
          <li><a href={`/${city.slug}/`}>{city.name}</a></li>
        ))}
      </ul>
    </div>

    <!-- Collections -->
    <div class="footer-section">
      <h3>Collections</h3>
      <ul class="footer-links">
        {collections.map(item => (
          <li><a href={item.href}>{item.name}</a></li>
        ))}
      </ul>
    </div>

    <!-- Bottom -->
    <div class="footer-bottom">
      <p class="footer-copyright">
        &copy; Indiaesque {new Date().getFullYear()}
      </p>
      <p class="footer-credit">
        Designed & Built in India
      </p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background-color: var(--color-white);
    padding: var(--space-12) var(--space-4);
    border-top: 1px solid var(--color-gray-200);
  }

  .footer-container {
    max-width: 700px;
    margin: 0 auto;
  }

  .footer-section {
    margin-bottom: var(--space-8);
    text-align: center;
  }

  .footer-section h3 {
    font-family: var(--font-body);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-medium);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-text);
    margin-bottom: var(--space-4);
  }

  .footer-contact {
    padding-bottom: var(--space-6);
    border-bottom: 1px solid var(--color-gray-200);
  }

  .footer-phone {
    font-size: var(--font-size-sm);
    color: var(--color-text-light);
    margin-bottom: var(--space-2);
  }

  .footer-address {
    font-size: var(--font-size-sm);
    font-style: normal;
    color: var(--color-text-light);
    line-height: var(--line-height-relaxed);
  }

  .footer-links {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .footer-links a {
    font-size: var(--font-size-sm);
    color: var(--color-text-light);
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: color var(--transition-fast);
  }

  .footer-links a:hover {
    color: var(--color-primary);
  }

  .footer-bottom {
    padding-top: var(--space-8);
    border-top: 1px solid var(--color-gray-200);
    text-align: center;
  }

  .footer-copyright {
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
    margin-bottom: var(--space-2);
  }

  .footer-credit {
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  @media (min-width: 640px) {
    .footer-container {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: var(--space-8);
      text-align: left;
    }

    .footer-section {
      text-align: left;
      margin-bottom: 0;
    }

    .footer-contact {
      grid-column: 1 / -1;
      text-align: center;
    }

    .footer-bottom {
      grid-column: 1 / -1;
    }
  }
</style>

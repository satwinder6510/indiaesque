---
// Footer Component
const currentYear = new Date().getFullYear();

const destinations = [
  { name: 'Delhi', href: '/delhi/' },
  { name: 'Jaipur', href: '/jaipur/' },
  { name: 'Mumbai', href: '/mumbai/' },
  { name: 'Goa', href: '/goa/' },
  { name: 'Agra', href: '/agra/' },
  { name: 'Varanasi', href: '/varanasi/' },
  { name: 'Kerala', href: '/kerala/' },
  { name: 'Udaipur', href: '/udaipur/' },
];

const collections = [
  { name: 'Luxury', href: '#' },
  { name: 'Adventure', href: '#' },
  { name: 'Cultural', href: '#' },
  { name: 'Wellness', href: '#' },
];

const company = [
  { name: 'About Us', href: '/about/' },
  { name: 'Journals', href: '/journal/' },
  { name: 'Contact', href: '/contact/' },
];

const legal = [
  { name: 'Privacy', href: '#' },
  { name: 'Terms', href: '#' },
];
---

<footer class="footer">
  <div class="footer-inner">
    <!-- Contact -->
    <div class="footer-contact">
      <h3 class="footer-heading">CONTACT</h3>
      <p class="footer-tagline">YOUR DREAM JOURNEY AWAITS</p>
      <p class="footer-info">
        Indiaesque | hello@indiaesque.com<br />
        New Delhi, India
      </p>
    </div>

    <!-- Links Grid -->
    <div class="footer-grid">
      <div class="footer-col">
        <h4 class="footer-col-title">DESTINATIONS</h4>
        <ul class="footer-links">
          {destinations.map(item => (
            <li><a href={item.href}>{item.name}</a></li>
          ))}
        </ul>
      </div>

      <div class="footer-col">
        <h4 class="footer-col-title">COLLECTIONS</h4>
        <ul class="footer-links">
          {collections.map(item => (
            <li><a href={item.href}>{item.name}</a></li>
          ))}
        </ul>
      </div>

      <div class="footer-col">
        <h4 class="footer-col-title">COMPANY</h4>
        <ul class="footer-links">
          {company.map(item => (
            <li><a href={item.href}>{item.name}</a></li>
          ))}
        </ul>
      </div>

      <div class="footer-col">
        <h4 class="footer-col-title">LEGAL</h4>
        <ul class="footer-links">
          {legal.map(item => (
            <li><a href={item.href}>{item.name}</a></li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Social -->
    <div class="footer-social">
      <a href="#" aria-label="Facebook">
        <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
          <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z" />
        </svg>
      </a>
      <a href="#" aria-label="Twitter">
        <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
          <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z" />
        </svg>
      </a>
      <a href="#" aria-label="Instagram">
        <svg width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <rect x="2" y="2" width="20" height="20" rx="5" ry="5" />
          <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z" />
          <line x1="17.5" y1="6.5" x2="17.51" y2="6.5" />
        </svg>
      </a>
    </div>

    <!-- Copyright -->
    <div class="footer-bottom">
      <p class="footer-copyright">&copy; Indiaesque {currentYear}</p>
      <p class="footer-credit">DESIGNED & BUILT IN INDIA</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: #ffffff;
    padding: 64px 24px;
  }

  .footer-inner {
    max-width: 900px;
    margin: 0 auto;
  }

  /* Contact */
  .footer-contact {
    text-align: center;
    margin-bottom: 48px;
  }

  .footer-heading {
    font-family: 'Muli', sans-serif;
    font-size: 14px;
    font-weight: 400;
    letter-spacing: 0.3em;
    color: #111827;
    margin-bottom: 12px;
  }

  .footer-tagline {
    font-size: 11px;
    letter-spacing: 0.15em;
    color: #6b7280;
    margin-bottom: 24px;
  }

  .footer-info {
    font-size: 14px;
    color: #6b7280;
    line-height: 1.8;
  }

  /* Links Grid */
  .footer-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32px;
    margin-bottom: 48px;
    text-align: center;
  }

  @media (min-width: 640px) {
    .footer-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .footer-col-title {
    font-family: 'Muli', sans-serif;
    font-size: 11px;
    font-weight: 500;
    letter-spacing: 0.1em;
    color: #111827;
    margin-bottom: 16px;
  }

  .footer-links {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .footer-links a {
    font-size: 14px;
    color: #6b7280;
    transition: color 0.2s ease;
  }

  .footer-links a:hover {
    color: #111827;
  }

  /* Social */
  .footer-social {
    display: flex;
    justify-content: center;
    gap: 32px;
    margin-bottom: 48px;
  }

  .footer-social a {
    color: #111827;
    transition: color 0.2s ease;
  }

  .footer-social a:hover {
    color: #6b7280;
  }

  /* Bottom */
  .footer-bottom {
    text-align: center;
  }

  .footer-copyright {
    font-size: 12px;
    color: #9ca3af;
    margin-bottom: 8px;
  }

  .footer-credit {
    font-size: 11px;
    letter-spacing: 0.15em;
    color: #9ca3af;
  }
</style>

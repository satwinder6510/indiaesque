    color: #1a1a1a;
    text-decoration: none;
  }
  .related-desc {
    font-size: 13px;
    color: #666;
    margin: 0 0 25px;
    line-height: 1.5;
  }

  /* HOLIDAY CARD */
  .holiday-card {
    background: #fff;
    overflow: hidden;
  }
  .holiday-image img {
    width: 100%;
    height: 180px;
    object-fit: cover;
    display: block;
  }
  .holiday-body {
    padding: 20px;
  }
  .holiday-location {
    display: block;
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 0.1em;
    color: #e07060;
    margin-bottom: 10px;

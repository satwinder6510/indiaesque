    padding: 40px 20px;
    text-align: center;
    border-bottom: 1px solid #e5e5e5;
  }
  .contact-title {
    font-size: 11px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: #333;
    margin: 0 0 15px;
  }
  .contact-phone {
    font-size: 13px;
    color: #666;
    margin: 0 0 8px;
  }
  .contact-address {
    font-size: 13px;
    color: #666;
    line-height: 1.6;

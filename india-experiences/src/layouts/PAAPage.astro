---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description: string;
  city: string;
  citySlug: string;
  heroImage?: string;
  datePublished?: string;
  dateModified?: string;
  faq?: { question: string; answer: string }[];
  relatedPages?: { href: string; label: string }[];
  schema?: object[];
}

const {
  title,
  description,
  city,
  citySlug,
  heroImage = '/images/default-hero.jpg',
  datePublished,
  dateModified,
  faq = [],
  relatedPages = [],
  schema = []
} = Astro.props;

// Generate mobile image path from hero image
const heroImageMobile = heroImage.replace(/(\.[^.]+)$/, '-mobile$1');

const formatDate = (dateStr?: string) => {
  if (!dateStr) return '';
  return new Date(dateStr).toLocaleDateString('en-GB', {
    day: '2-digit',
    month: '2-digit',
    year: 'numeric',
  });
};
---

<BaseLayout title={title} description={description} schema={schema} includeFooter={false}>

  <!-- HERO -->
  <div class="hero">
    <picture class="hero-picture">
      <source media="(max-width: 599px)" srcset={heroImageMobile} />
      <source media="(min-width: 600px)" srcset={heroImage} />
      <img src={heroImage} alt={`${title} - ${city}`} class="hero-img" loading="eager" />
    </picture>
    <div class="hero-overlay">
      <span class="hero-location">{city.toUpperCase()}</span>
      <h1 class="hero-title">{title.toUpperCase()}</h1>
    </div>
  </div>

  <!-- ARTICLE -->
  <article class="article">
    <div class="article-content">
      <slot />
    </div>

    <!-- AUTHOR -->
    <div class="author">
      <div class="author-avatar"></div>
      <div class="author-info">
        <span class="author-name">Indiaesque Team</span>
        <span class="author-date">{formatDate(dateModified || datePublished)}</span>
      </div>
    </div>

    <!-- RECENT JOURNALS -->
    {relatedPages.length > 0 && (
      <div class="recent">
        <h3 class="recent-title">Recent Journals</h3>
        <ul class="recent-list">
          {relatedPages.slice(0, 6).map(link => (
            <li><a href={link.href}>{link.label}</a></li>
          ))}
        </ul>
      </div>
    )}

    <!-- SHARE -->

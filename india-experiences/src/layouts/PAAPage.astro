    padding: 30px 20px;
    max-width: 400px;
    margin: 0 auto;
    text-align: center;
  }
  .foot-col {
    text-align: center;
  }
  .foot-col h4 {
    font-size: 11px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: #333;
    margin: 0 0 15px;
  }
  .foot-col ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .foot-col li {
    margin-bottom: 8px;
  }
  .foot-col a {
    font-size: 12px;
    color: #666;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .foot-col a:hover {
    color: #e07060;
  }

  /* COPYRIGHT */
  .copyright {
    padding: 30px 20px;
    text-align: center;
    border-top: 1px solid #e5e5e5;
  }
  .copyright p {
    font-size: 11px;
    color: #999;
    margin: 0 0 5px;
  }
  .credit {
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }
</style>

    margin-bottom: 15px;
  }
  .share-icons {
    display: flex;
    justify-content: center;
    gap: 20px;
  }
  .share-icons a {
    color: #333;
  }
  .share-icons a:hover {
    color: #e07060;
  }

  /* PAGER */
  .pager {
    display: flex;
    justify-content: space-between;
    margin-top: 40px;
    padding-top: 30px;
    border-top: 1px solid #e5e5e5;
  }
  .pager-link {
    font-size: 13px;
    color: #888;
    text-decoration: none;
  }
  .pager-link:hover {
    color: #e07060;
  }

  /* FAQ */
  .faq {
    margin-top: 40px;
    padding-top: 30px;
    border-top: 1px solid #e5e5e5;
  }
  .faq-title {
    font-family: 'Oswald', sans-serif;
    font-size: 18px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0 0 30px;
    color: #1a1a1a;
  }
  .faq-item {
    margin-bottom: 25px;
  }
  .faq-item h3 {
    font-size: 15px;
    font-weight: 600;
    margin: 0 0 8px;
    color: #1a1a1a;
  }
  .faq-item p {

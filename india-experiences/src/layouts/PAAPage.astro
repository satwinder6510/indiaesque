        </a>
        <a href="#" aria-label="Pinterest">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0C5.373 0 0 5.372 0 12c0 5.084 3.163 9.426 7.627 11.174-.105-.949-.2-2.405.042-3.441.218-.937 1.407-5.965 1.407-5.965s-.359-.719-.359-1.782c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738.098.119.112.224.083.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.262 7.929-7.262 4.163 0 7.398 2.967 7.398 6.931 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.359-.632-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146C9.57 23.812 10.763 24 12 24c6.627 0 12-5.373 12-12 0-6.628-5.373-12-12-12z"/></svg>
        </a>
      </div>
    </div>

    <!-- NAV -->
    <nav class="pager">
      <a href={`/${citySlug}/`} class="pager-link">&larr; Previous</a>
      <a href={`/${citySlug}/`} class="pager-link">Next &rarr;</a>
    </nav>

    <!-- FAQ -->
    {faq.length > 0 && (
      <div class="faq">
        <h2 class="faq-title">Frequently Asked Questions</h2>
        {faq.map(item => (
          <div class="faq-item">
            <h3>{item.question}</h3>
            <p>{item.answer}</p>
          </div>
        ))}
      </div>
    )}
  </article>

  <!-- RELATED HOLIDAYS -->
  <section class="related">
    <div class="related-inner">
      <div class="related-header">
        <h2>Related Holidays</h2>
        <a href={`/${citySlug}/`}>&rarr;</a>
      </div>
      <p class="related-desc">Discover more curated experiences in {city}. All prices shown in INR with verified local guides.</p>

      <div class="holiday-card">
        <div class="holiday-image">
          <img src={heroImage} alt={city} />
        </div>
        <div class="holiday-body">
          <span class="holiday-location">{city.toUpperCase()}</span>
          <p class="holiday-desc">Explore the best of {city} with our curated local experiences and expert guides.</p>
          <div class="holiday-meta">
            <span>Multiple Days</span>
            <span>Guided Experience</span>
          </div>
          <div class="holiday-footer">
            <span class="holiday-price">From â‚¹2,500</span>
            <a href={`/${citySlug}/`} class="holiday-arrow">&rarr;</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- NEWSLETTER -->
  <section class="newsletter">
    <img src="/images/newsletter-bg.jpg" alt="" class="newsletter-bg" />
    <div class="newsletter-overlay"></div>
    <div class="newsletter-content">
      <h2>STAY UP TO DATE BY SUBSCRIBING<br/>TO OUR NEWSLETTER</h2>
      <form class="newsletter-form">
        <input type="text" placeholder="FORENAME" required />
        <input type="text" placeholder="SURNAME" required />
        <input type="email" placeholder="EMAIL ADDRESS" required />
        <button type="submit">SUBSCRIBE</button>
      </form>
    </div>
  </section>

  <!-- CONTACT -->
  <section class="contact">
    <h3 class="contact-title">Contact</h3>
    <p class="contact-phone">+91 00000 00000</p>
    <p class="contact-address">Indiaesque &bull; Address Line 1<br/>Address Line 2 &bull; 110001</p>
  </section>

  <!-- FOOTER LINKS -->
  <section class="foot-links">
    <div class="foot-col">
      <h4>Destinations</h4>
      <ul>
        <li><a href="/delhi/">Delhi</a></li>
        <li><a href="/jaipur/">Jaipur</a></li>
        <li><a href="/mumbai/">Mumbai</a></li>
        <li><a href="/goa/">Goa</a></li>
        <li><a href="/varanasi/">Varanasi</a></li>
        <li><a href="/kerala/">Kerala</a></li>
      </ul>
    </div>
    <div class="foot-col">
      <h4>Collections</h4>
      <ul>
        <li><a href="#">Food Tours</a></li>
        <li><a href="#">Heritage</a></li>
        <li><a href="#">Cooking</a></li>
        <li><a href="#">Markets</a></li>
        <li><a href="#">Day Trips</a></li>
        <li><a href="#">Art & Craft</a></li>
      </ul>
    </div>
  </section>

  <!-- COPYRIGHT -->
  <footer class="copyright">
    <p>&copy; Indiaesque {new Date().getFullYear()}</p>
    <p class="credit">Designed & Built in India</p>
  </footer>

</BaseLayout>


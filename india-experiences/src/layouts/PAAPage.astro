    font-size: 13px;
    line-height: 1.5;
    color: #666;
    margin: 0 0 15px;
  }
  .holiday-meta {
    display: flex;
    gap: 15px;
    font-size: 11px;
    color: #999;
    margin-bottom: 15px;
  }
  .holiday-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 15px;
    border-top: 1px solid #e5e5e5;
  }
  .holiday-price {
    font-family: 'Oswald', sans-serif;
    font-size: 18px;
    color: #1a1a1a;
  }
  .holiday-arrow {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background: #e07060;
    color: #fff;
    border-radius: 50%;
    text-decoration: none;
    font-size: 18px;
  }

  /* NEWSLETTER */
  .newsletter {
    position: relative;
    padding: 80px 24px;
    text-align: center;
    overflow: hidden;
  }
  .newsletter-bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .newsletter-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.4);
  }
  .newsletter-content {
    position: relative;
    z-index: 1;
  }
  .newsletter h2 {
    font-family: 'Oswald', sans-serif;
    font-size: 18px;
    font-weight: 400;
    letter-spacing: 0.1em;
    color: #ffffff;
    margin: 0 0 32px 0;
    line-height: 1.5;
  }
  .newsletter-form {
    max-width: 320px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }
  .newsletter-form input {
    padding: 14px 16px;
    font-family: 'Muli', sans-serif;
    font-size: 12px;
    letter-spacing: 0.1em;
    border: 1px solid rgba(255, 255, 255, 0.3);
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    color: #ffffff;
  }

---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description: string;
  city: string;
  citySlug: string;
  categoryName: string;
  categorySlug?: string;
  heroImage?: string;
  experiences?: {
    title: string;
    href: string;
    image?: string;
    duration?: string;
    price?: string;
    rating?: number;
    reviewCount?: number;
  }[];
  faq?: { question: string; answer: string }[];
  relatedPages?: { href: string; label: string }[];
  schema?: object[];
}

const {
  title,
  description,
  city,
  citySlug,
  categoryName,
  categorySlug,
  heroImage = '/images/default-hero.jpg',
  experiences = [],
  faq = [],
  relatedPages = [],
  schema = []
} = Astro.props;

// Generate mobile image path from hero image
const heroImageMobile = heroImage.replace(/(\.[^.]+)$/, '-mobile$1');
---

<BaseLayout title={title} description={description} schema={schema} includeFooter={false}>

  <!-- HERO -->
  <div class="hero">
    <picture class="hero-picture">
      <source media="(max-width: 599px)" srcset={heroImageMobile} />
      <source media="(min-width: 600px)" srcset={heroImage} />
      <img src={heroImage} alt={`${categoryName} in ${city}`} class="hero-img" loading="eager" />
    </picture>
    <div class="hero-overlay">
      <span class="hero-location">{city.toUpperCase()}</span>
      <h1 class="hero-title">{categoryName.toUpperCase()}</h1>
      <p class="hero-subtitle">{description}</p>
    </div>
  </div>

  <!-- CONTENT -->
  <article class="article">
    <div class="article-content">
      <slot />
    </div>

    <!-- EXPERIENCES LIST -->
    {relatedPages.length > 0 && (
      <div class="experiences">
        <h2 class="experiences-title">{categoryName} in {city}</h2>
        <ul class="experiences-list">
          {relatedPages.map(link => (
            <li><a href={link.href}>{link.label}</a></li>
          ))}
        </ul>
      </div>
    )}

    <!-- FAQ -->
    {faq.length > 0 && (
      <div class="faq">
        <h2 class="faq-title">Frequently Asked Questions</h2>
        {faq.map(item => (
          <div class="faq-item">
            <h3>{item.question}</h3>
            <p>{item.answer}</p>
          </div>
        ))}
      </div>
    )}
  </article>

  <!-- VIATOR TOURS -->
  {experiences.length > 0 && (
    <section class="viator-section">
      <div class="viator-inner">
        <h2>Book {categoryName} in {city}</h2>
        <p class="viator-desc">Popular tours from our partners. All prices in INR.</p>

        <div class="viator-grid">
          {experiences.map(exp => (
            <a href={exp.href} target="_blank" rel="noopener" class="tour-card">
              <div class="tour-image">
                <img src={exp.image || heroImage} alt={exp.title} loading="lazy" />
                {exp.duration && <span class="tour-duration">{exp.duration}</span>}
              </div>
              <div class="tour-body">
                <h3 class="tour-title">{exp.title}</h3>
                {exp.rating && exp.rating > 0 && (
                  <div class="tour-rating">
                    <span class="stars">{'â˜…'.repeat(Math.round(exp.rating))}</span>
                    <span class="score">{exp.rating.toFixed(1)}</span>
                    {exp.reviewCount && exp.reviewCount > 0 && (
                      <span class="reviews">({exp.reviewCount})</span>
                    )}
                  </div>
                )}
                <div class="tour-footer">
                  <span class="tour-price">{exp.price || 'View Details'}</span>
                  <span class="tour-cta">BOOK NOW</span>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- NEWSLETTER -->
  <section class="newsletter">
    <img src="/images/newsletter-bg.jpg" alt="" class="newsletter-bg" />
    <div class="newsletter-overlay"></div>
    <div class="newsletter-content">
      <h2>STAY UP TO DATE BY SUBSCRIBING<br/>TO OUR NEWSLETTER</h2>
      <form class="newsletter-form">
        <input type="text" placeholder="FORENAME" required />
        <input type="text" placeholder="SURNAME" required />
        <input type="email" placeholder="EMAIL ADDRESS" required />
        <button type="submit">SUBSCRIBE</button>
      </form>
    </div>
  </section>

  <!-- CONTACT -->
  <section class="contact">
    <h3 class="contact-title">Contact</h3>
    <p class="contact-phone">+91 00000 00000</p>
    <p class="contact-address">Indiaesque &bull; Address Line 1<br/>Address Line 2 &bull; 110001</p>
  </section>

  <!-- FOOTER LINKS -->
  <section class="foot-links">
    <div class="foot-col">
      <h4>Destinations</h4>
      <ul>
        <li><a href="/delhi/">Delhi</a></li>
        <li><a href="/jaipur/">Jaipur</a></li>
        <li><a href="/mumbai/">Mumbai</a></li>
        <li><a href="/goa/">Goa</a></li>
        <li><a href="/varanasi/">Varanasi</a></li>
        <li><a href="/kerala/">Kerala</a></li>
      </ul>
    </div>
    <div class="foot-col">
      <h4>Collections</h4>
      <ul>
        <li><a href="#">Food Tours</a></li>
        <li><a href="#">Heritage</a></li>
        <li><a href="#">Cooking</a></li>
        <li><a href="#">Markets</a></li>
        <li><a href="#">Day Trips</a></li>
        <li><a href="#">Art & Craft</a></li>
      </ul>
    </div>
  </section>

  <!-- COPYRIGHT -->
  <footer class="copyright">
    <p>&copy; Indiaesque {new Date().getFullYear()}</p>
    <p class="credit">Designed & Built in India</p>
  </footer>

</BaseLayout>

<style>
  /* HERO */
  .hero {
    position: relative;
    width: 100%;
    min-height: 300px;
    display: flex;
    align-items: flex-end;
    overflow: hidden;
  }
  .hero-picture {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }
  .hero-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
  .hero-overlay {
    position: relative;
    z-index: 1;
    width: 100%;
    padding: 60px 20px 30px;
    background: linear-gradient(to top, rgba(0,0,0,0.6) 0%, transparent 100%);
    text-align: center;
  }
  .hero-location {
    display: block;
    font-size: 10px;
    font-weight: 500;
    letter-spacing: 0.2em;
    color: #fff;
    margin-bottom: 12px;
  }
  .hero-title {
    font-family: 'Oswald', sans-serif;
    font-size: 24px;
    font-weight: 400;
    letter-spacing: 0.05em;
    line-height: 1.3;
    color: #fff;
    margin: 0 0 15px;
  }
  .hero-subtitle {
    font-size: 14px;
    color: rgba(255,255,255,0.9);
    margin: 0;
    max-width: 400px;
    margin: 0 auto;
    line-height: 1.5;
  }
  @media (min-width: 600px) {
    .hero { min-height: 400px; }
    .hero-title { font-size: 32px; }
  }

  /* ARTICLE */
  .article {
    max-width: 600px;
    margin: 0 auto;
    padding: 30px 20px;
  }
  .article-content {
    font-family: 'Muli', sans-serif;
    font-size: 15px;
    line-height: 1.7;
    color: #333;
  }
  .article-content :global(h2) {
    font-family: 'Oswald', sans-serif;
    font-size: 18px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 40px 0 20px;
    color: #1a1a1a;
  }
  .article-content :global(h3) {
    font-family: 'Oswald', sans-serif;
    font-size: 16px;
    font-weight: 400;
    margin: 30px 0 15px;
    color: #1a1a1a;
  }
  .article-content :global(h4) {
    font-size: 14px;
    font-weight: 600;
    margin: 24px 0 12px;
    color: #1a1a1a;
  }
  .article-content :global(p) {
    margin: 0 0 20px;
  }
  .article-content :global(ul),
  .article-content :global(ol) {
    margin: 0 0 20px;
    padding-left: 20px;
  }
  .article-content :global(ul) { list-style: disc; }
  .article-content :global(ol) { list-style: decimal; }
  .article-content :global(li) {
    margin-bottom: 8px;
  }
  .article-content :global(strong) {
    font-weight: 600;
    color: #1a1a1a;
  }
  .article-content :global(a) {
    color: #e07060;
    text-decoration: none;
  }
  .article-content :global(a:hover) {
    text-decoration: underline;
  }
  .article-content :global(blockquote) {
    padding: 12px 20px;
    margin: 0 0 20px;
    border-left: 3px solid #2a9d8f;
    font-style: italic;
    color: #666;
  }
  .article-content :global(blockquote p) {
    margin: 0;
  }

  /* EXPERIENCES */
  .experiences {
    margin-top: 40px;
    padding-top: 30px;
    border-top: 1px solid #e5e5e5;
  }
  .experiences-title {
    font-family: 'Oswald', sans-serif;
    font-size: 16px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0 0 20px;
    color: #1a1a1a;
  }
  .experiences-list {
    list-style: disc;
    padding-left: 18px;
    margin: 0;
  }
  .experiences-list li {
    margin-bottom: 10px;
  }
  .experiences-list a {
    color: #333;
    text-decoration: none;
    font-size: 14px;
    line-height: 1.4;
  }
  .experiences-list a:hover {
    color: #e07060;
  }

  /* FAQ */
  .faq {
    margin-top: 40px;
    padding-top: 30px;
    border-top: 1px solid #e5e5e5;
  }
  .faq-title {
    font-family: 'Oswald', sans-serif;
    font-size: 18px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0 0 30px;
    color: #1a1a1a;
  }
  .faq-item {
    margin-bottom: 25px;
  }
  .faq-item h3 {
    font-size: 15px;
    font-weight: 600;
    margin: 0 0 8px;
    color: #1a1a1a;
  }
  .faq-item p {
    font-size: 14px;
    line-height: 1.6;
    color: #666;
    margin: 0;
  }

  /* VIATOR TOURS SECTION */
  .viator-section {
    background: #f9fafb;
    padding: 48px 20px;
  }
  .viator-inner {
    max-width: 900px;
    margin: 0 auto;
  }
  .viator-section h2 {
    font-family: 'Oswald', sans-serif;
    font-size: 22px;
    font-weight: 400;
    letter-spacing: 0.05em;
    color: #111827;
    margin: 0 0 8px 0;
    text-align: center;
  }
  .viator-desc {
    font-size: 14px;
    color: #6b7280;
    margin: 0 0 32px;
    text-align: center;
  }
  .viator-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 24px;
  }
  @media (min-width: 600px) {
    .viator-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media (min-width: 900px) {
    .viator-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* TOUR CARD */
  .tour-card {
    display: block;
    background: #fff;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  .tour-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.1);
  }
  .tour-image {
    position: relative;
    aspect-ratio: 16/10;
    overflow: hidden;
  }
  .tour-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  .tour-card:hover .tour-image img {
    transform: scale(1.05);
  }
  .tour-duration {
    position: absolute;
    top: 12px;
    right: 12px;
    font-family: 'Muli', sans-serif;
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 0.05em;
    color: #ffffff;
    background: rgba(0,0,0,0.6);
    padding: 4px 10px;
  }
  .tour-body {
    padding: 16px;
  }
  .tour-title {
    font-family: 'Oswald', sans-serif;
    font-size: 15px;
    font-weight: 400;
    letter-spacing: 0.02em;
    color: #111827;
    margin: 0 0 8px 0;
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .tour-rating {
    display: flex;
    align-items: center;
    gap: 6px;
    margin-bottom: 12px;
    font-size: 12px;
  }
  .tour-rating .stars {
    color: #E9CDB0;
  }
  .tour-rating .score {
    color: #111827;
    font-weight: 500;
  }
  .tour-rating .reviews {
    color: #9ca3af;
  }
  .tour-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 12px;
    border-top: 1px solid #f3f4f6;
  }
  .tour-price {
    font-family: 'Muli', sans-serif;
    font-size: 14px;
    font-weight: 600;
    color: #111827;
  }
  .tour-cta {
    font-family: 'Muli', sans-serif;
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 0.1em;
    color: #0d9488;
  }

  /* NEWSLETTER */
  .newsletter {
    position: relative;
    padding: 80px 24px;
    text-align: center;
    overflow: hidden;
  }
  .newsletter-bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .newsletter-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.4);
  }
  .newsletter-content {
    position: relative;
    z-index: 1;
  }
  .newsletter h2 {
    font-family: 'Oswald', sans-serif;
    font-size: 18px;
    font-weight: 400;
    letter-spacing: 0.1em;
    color: #ffffff;
    margin: 0 0 32px 0;
    line-height: 1.5;
  }
  .newsletter-form {
    max-width: 320px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }
  .newsletter-form input {
    padding: 14px 16px;
    font-family: 'Muli', sans-serif;
    font-size: 12px;
    letter-spacing: 0.1em;
    border: 1px solid rgba(255, 255, 255, 0.3);
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    color: #ffffff;
  }
  .newsletter-form input::placeholder {
    color: rgba(255, 255, 255, 0.7);
  }
  .newsletter-form button {
    padding: 14px 16px;
    font-family: 'Muli', sans-serif;
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 0.1em;
    border: none;
    background-color: #ffffff;
    color: #111827;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }
  .newsletter-form button:hover {
    background-color: #f3f4f6;
  }
  @media (min-width: 768px) {
    .newsletter {
      padding: 80px 48px;
    }
    .newsletter h2 {
      font-size: 22px;
    }
    .newsletter-form {
      flex-direction: row;
      max-width: 700px;
      gap: 12px;
    }
    .newsletter-form input {
      flex: 1;
    }
    .newsletter-form button {
      flex: 0 0 auto;
      padding: 14px 32px;
    }
  }

  /* CONTACT */
  .contact {
    padding: 40px 20px;
    text-align: center;
    border-bottom: 1px solid #e5e5e5;
  }
  .contact-title {
    font-size: 11px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: #333;
    margin: 0 0 15px;
  }
  .contact-phone {
    font-size: 13px;
    color: #666;
    margin: 0 0 8px;
  }
  .contact-address {
    font-size: 13px;
    color: #666;
    line-height: 1.6;
    margin: 0;
  }

  /* FOOTER LINKS */
  .foot-links {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 30px;
    padding: 30px 20px;
    max-width: 400px;
    margin: 0 auto;
    text-align: center;
  }
  .foot-col {
    text-align: center;
  }
  .foot-col h4 {
    font-size: 11px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: #333;
    margin: 0 0 15px;
  }
  .foot-col ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .foot-col li {
    margin-bottom: 8px;
  }
  .foot-col a {
    font-size: 12px;
    color: #666;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .foot-col a:hover {
    color: #e07060;
  }

  /* COPYRIGHT */
  .copyright {
    padding: 30px 20px;
    text-align: center;
    border-top: 1px solid #e5e5e5;
  }
  .copyright p {
    font-size: 11px;
    color: #999;
    margin: 0 0 5px;
  }
  .credit {
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }
</style>

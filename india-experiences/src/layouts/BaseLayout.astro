---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import MobileMenu from '../components/MobileMenu.astro';
import '../styles/main.css';

interface Props {
  title: string;
  description: string;
  canonicalUrl?: string;
  ogImage?: string;
  schema?: object[];
  includeFooter?: boolean;
}

const siteName = 'Indiaesque';
const siteUrl = 'https://indiaesque.com';

const {
  title,
  description,
  canonicalUrl = Astro.url.href,
  ogImage = `${siteUrl}/og-default.jpg`,
  schema = [],
  includeFooter = true,
} = Astro.props;

const fullTitle = `${title} | ${siteName}`;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>{fullTitle}</title>
  <meta name="description" content={description}>
  <meta name="robots" content="index, follow">
  <link rel="canonical" href={canonicalUrl}>

  <!-- Open Graph -->
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:url" content={canonicalUrl}>
  <meta property="og:type" content="website">
  <meta property="og:image" content={ogImage}>
  <meta property="og:site_name" content={siteName}>

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>

  <!-- Schema -->
  {schema.length > 0 && (
    <script type="application/ld+json" set:html={JSON.stringify(schema.length === 1 ? schema[0] : schema)} />
  )}

  <link rel="icon" href="/favicon.ico">

  <!-- GetYourGuide Analytics -->
  <script async defer src="https://widget.getyourguide.com/dist/pa.umd.production.min.js" data-gyg-partner-id="OBZX5NA" is:inline></script>

</head>
<body>
  <div class="page-wrapper">
    <Header />
    <main>
      <slot />
    </main>
    {includeFooter && <Footer />}
  </div>
  <MobileMenu />
</body>
</html>

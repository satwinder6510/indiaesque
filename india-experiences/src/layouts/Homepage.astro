---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description: string;
  schema?: object[];
}

const { title, description, schema = [] } = Astro.props;
---

<BaseLayout title={title} description={description} schema={schema} type="website" includeFooter={false}>
  <slot name="hero" />
  <slot />

  <!-- FOOTER -->
  <footer class="site-footer">
    <div class="footer-inner">
      <!-- Contact Section -->
      <div class="footer-contact">
        <h3 class="footer-contact-title">CONTACT</h3>
        <p class="footer-contact-tagline">YOUR DREAM JOURNEY AWAITS</p>
        <p class="footer-contact-info">
          Indiaesque | hello@indiaesque.com<br />
          New Delhi, India | +91 XXX XXX XXXX
        </p>
      </div>

      <!-- Links Grid -->
      <div class="footer-links">
        <div class="footer-col">
          <h4>DESTINATIONS</h4>
          <ul>
            <li><a href="/delhi/">Delhi</a></li>
            <li><a href="/jaipur/">Jaipur</a></li>
            <li><a href="/mumbai/">Mumbai</a></li>
            <li><a href="/goa/">Goa</a></li>
          </ul>
        </div>
        <div class="footer-col">
          <h4>COLLECTIONS</h4>
          <ul>
            <li><a href="#">Luxury</a></li>
            <li><a href="#">Adventure</a></li>
            <li><a href="#">Cultural</a></li>
            <li><a href="#">Wellness</a></li>
          </ul>
        </div>
        <div class="footer-col">
          <h4>COMPANY</h4>
          <ul>
            <li><a href="/about/">About Us</a></li>
            <li><a href="#">Journals</a></li>
            <li><a href="/contact/">Contact</a></li>
            <li><a href="#">Careers</a></li>
          </ul>
        </div>
        <div class="footer-col">
          <h4>LEGAL</h4>
          <ul>
            <li><a href="#">Privacy</a></li>
            <li><a href="#">Terms</a></li>
            <li><a href="#">Cookies</a></li>
          </ul>
        </div>
      </div>

      <!-- Social Media -->
      <div class="footer-social">
        <a href="#" aria-label="Facebook">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
          </svg>
        </a>
        <a href="#" aria-label="Twitter">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
            <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
          </svg>
        </a>
        <a href="#" aria-label="Instagram">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
          </svg>
        </a>
        <a href="#" aria-label="Pinterest">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0C5.373 0 0 5.372 0 12c0 5.084 3.163 9.426 7.627 11.174-.105-.949-.2-2.405.042-3.441.218-.937 1.407-5.965 1.407-5.965s-.359-.719-.359-1.782c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738.098.119.112.224.083.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.262 7.929-7.262 4.163 0 7.398 2.967 7.398 6.931 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.359-.631-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146C9.57 23.812 10.763 24 12 24c6.627 0 12-5.373 12-12 0-6.628-5.373-12-12-12z"/>
          </svg>
        </a>
      </div>

      <!-- Copyright -->
      <div class="footer-bottom">
        <p>&copy; Indiaesque {new Date().getFullYear()}</p>
        <p class="footer-credit">DESIGNED & BUILT IN INDIA</p>
      </div>
    </div>
  </footer>
</BaseLayout>

<style>
  /* Footer */
  .site-footer {
    background: var(--white);
    padding: 64px 24px 48px;
  }

  @media (min-width: 768px) {
    .site-footer {
      padding: 80px 24px 48px;
    }
  }

  .footer-inner {
    max-width: 1100px;
    margin: 0 auto;
  }

  /* Contact Section */
  .footer-contact {
    text-align: center;
    margin-bottom: 48px;
  }

  .footer-contact-title {
    font-family: var(--font-body);
    font-size: 18px;
    font-weight: 400;
    letter-spacing: 0.3em;
    margin-bottom: 16px;
  }

  .footer-contact-tagline {
    font-family: var(--font-body);
    font-size: 12px;
    color: var(--gray-600);
    letter-spacing: 0.1em;
    margin-bottom: 24px;
  }

  .footer-contact-info {
    font-family: var(--font-body);
    font-size: 14px;
    color: var(--gray-600);
    line-height: 1.8;
  }

  /* Links Grid */
  .footer-links {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32px;
    margin-bottom: 48px;
    text-align: center;
  }

  @media (min-width: 768px) {
    .footer-links {
      grid-template-columns: repeat(4, 1fr);
      gap: 48px;
    }
  }

  .footer-col h4 {
    font-family: var(--font-body);
    font-size: 12px;
    font-weight: 500;
    letter-spacing: 0.15em;
    margin-bottom: 16px;
  }

  .footer-col ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-col li {
    margin-bottom: 12px;
  }

  .footer-col a {
    font-family: var(--font-body);
    font-size: 14px;
    color: var(--gray-600);
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer-col a:hover {
    color: var(--black);
  }

  /* Social Media */
  .footer-social {
    display: flex;
    justify-content: center;
    gap: 24px;
    margin-bottom: 48px;
  }

  @media (min-width: 768px) {
    .footer-social {
      gap: 32px;
    }
  }

  .footer-social a {
    color: var(--black);
    transition: color 0.2s;
  }

  .footer-social a:hover {
    color: var(--gray-600);
  }

  /* Footer Bottom */
  .footer-bottom {
    text-align: center;
  }

  .footer-bottom p {
    font-family: var(--font-body);
    font-size: 12px;
    color: var(--gray-500);
    margin: 0 0 8px;
  }

  .footer-credit {
    font-size: 11px !important;
    letter-spacing: 0.1em;
  }
</style>

---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description: string;
  schema?: object[];
}

const { title, description, schema = [] } = Astro.props;
---

<BaseLayout title={title} description={description} schema={schema} type="website" includeFooter={false}>
  <slot name="hero" />
  <slot />

  <!-- NEWSLETTER -->
  <section class="newsletter">
    <div class="newsletter-inner">
      <h2 class="newsletter-title">Stay Up To Date By Subscribing<br/>To Our Newsletter</h2>
      <form class="newsletter-form">
        <input type="text" placeholder="FORENAME" />
        <input type="text" placeholder="SURNAME" />
        <input type="email" placeholder="EMAIL ADDRESS" required />
        <button type="submit">Subscribe</button>
      </form>
    </div>
  </section>

  <!-- CONTACT -->
  <section class="contact">
    <h3 class="contact-title">Contact</h3>
    <p class="contact-phone">+91 00000 00000</p>
    <p class="contact-address">Indiaesque &bull; Address Line 1<br/>Address Line 2 &bull; 110001</p>
  </section>

  <!-- FOOTER LINKS -->
  <section class="foot-links">
    <div class="foot-col">
      <h4>Destinations</h4>
      <ul>
        <li><a href="/delhi/">Delhi</a></li>
        <li><a href="/jaipur/">Jaipur</a></li>
        <li><a href="/mumbai/">Mumbai</a></li>
        <li><a href="/goa/">Goa</a></li>
        <li><a href="/varanasi/">Varanasi</a></li>
        <li><a href="/kerala/">Kerala</a></li>
      </ul>
    </div>
    <div class="foot-col">
      <h4>Collections</h4>
      <ul>
        <li><a href="#">Food Tours</a></li>
        <li><a href="#">Heritage</a></li>
        <li><a href="#">Cooking</a></li>
        <li><a href="#">Markets</a></li>
        <li><a href="#">Day Trips</a></li>
        <li><a href="#">Art & Craft</a></li>
      </ul>
    </div>
  </section>

  <!-- COPYRIGHT -->
  <footer class="copyright">
    <p>&copy; Indiaesque {new Date().getFullYear()}</p>
    <p class="credit">Designed & Built in India</p>
  </footer>
</BaseLayout>

<style>
  /* NEWSLETTER */
  .newsletter {
    background: #2a9d8f;
    padding: 50px 20px;
    text-align: center;
  }
  .newsletter-inner {
    max-width: 320px;
    margin: 0 auto;
  }
  .newsletter-title {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 14px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    line-height: 1.6;
    color: #fff;
    margin: 0 0 30px;
  }
  .newsletter-form {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  .newsletter-form input {
    width: 100%;
    padding: 14px;
    font-size: 12px;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border: none;
    background: #fff;
    color: #333;
  }
  .newsletter-form input::placeholder {
    color: #aaa;
  }
  .newsletter-form button {
    padding: 14px;
    font-size: 12px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border: none;
    background: #e07060;
    color: #fff;
    cursor: pointer;
  }
  .newsletter-form button:hover {
    background: #c85a4a;
  }

  /* CONTACT */
  .contact {
    padding: 40px 20px;
    text-align: center;
    border-bottom: 1px solid #e5e5e5;
  }
  .contact-title {
    font-size: 11px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: #333;
    margin: 0 0 15px;
  }
  .contact-phone {
    font-size: 13px;
    color: #666;
    margin: 0 0 8px;
  }
  .contact-address {
    font-size: 13px;
    color: #666;
    line-height: 1.6;
    margin: 0;
  }

  /* FOOTER LINKS */
  .foot-links {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 30px;
    padding: 30px 20px;
    max-width: 400px;
    margin: 0 auto;
    text-align: center;
  }
  .foot-col {
    text-align: center;
  }
  .foot-col h4 {
    font-size: 11px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: #333;
    margin: 0 0 15px;
  }
  .foot-col ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .foot-col li {
    margin-bottom: 8px;
  }
  .foot-col a {
    font-size: 12px;
    color: #666;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .foot-col a:hover {
    color: #e07060;
  }

  /* COPYRIGHT */
  .copyright {
    padding: 30px 20px;
    text-align: center;
    border-top: 1px solid #e5e5e5;
  }
  .copyright p {
    font-size: 11px;
    color: #999;
    margin: 0 0 5px;
  }
  .credit {
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }
</style>
